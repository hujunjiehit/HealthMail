<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/btn_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_press"
            android:textSize="26sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_shoucang"
            android:text=" 一键收藏"/>

        <Button
            android:id="@+id/btn_cancel_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_press"
            android:textSize="26sp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/btn_guanzhu"
            android:drawableLeft="@drawable/ic_cancle_shoucang"
            android:text=" 取消收藏"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColor="@color/red"
            android:text="小号只有收藏了目标私教,才能约该私教的课"/>

    </LinearLayout>

</RelativeLayout>
