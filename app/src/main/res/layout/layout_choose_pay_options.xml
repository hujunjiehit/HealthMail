<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="#f4f4f4">

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="请选择支付渠道"/>

        <Button
            android:id="@+id/btn_fukuan_kuaijie"
            android:layout_marginTop="10dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_pay_option"
            android:textSize="16sp"
            android:text="快捷支付"/>

        <Button
            android:id="@+id/btn_fukuan_kuaiqian_1"
            android:layout_marginTop="10dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_pay_option"
            android:textSize="16sp"
            android:text="快钱支付(储蓄卡)"/>

        <Button
            android:id="@+id/btn_fukuan_tonglian"
            android:layout_marginTop="10dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_pay_option"
            android:textSize="16sp"
            android:text="通联付款"/>

        <Button
            android:id="@+id/btn_fukuan_yilian"
            android:layout_marginTop="10dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_pay_option"
            android:textSize="16sp"
            android:text="易联支付"/>

        <Button
            android:id="@+id/btn_fukuan_huifu"
            android:layout_marginTop="10dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_pay_option"
            android:textSize="16sp"
            android:text="汇付支付"/>

        <Button
            android:id="@+id/btn_fukuan_kuaiqian_2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_pay_option"
            android:textSize="16sp"
            android:text="快钱支付(信用卡)"/>

        <Button
            android:id="@+id/btn_fukuan_lianlian"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_pay_option"
            android:textSize="16sp"
            android:text="连连支付"/>
    </LinearLayout>
</RelativeLayout>