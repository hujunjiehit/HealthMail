<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_icon">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/launch"

        app:lottie_imageAssetsFolder="images/"
        app:lottie_loop="false" />

    <ImageView
        android:id="@+id/ad_imgview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/skip_btn"
        android:layout_width="53.3dp"
        android:layout_height="23.3dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="23.3dp"
        android:layout_marginTop="23.3dp"
        android:background="@drawable/ad_skip_bg"
        android:gravity="center"
        android:text="@string/ad_skip"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:visibility="gone"/>

</RelativeLayout>


