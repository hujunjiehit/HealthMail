<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/coni_layout"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/coni_switch_title"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/dialog_coni_count_bg"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:lineSpacingExtra="6dp"
                android:text="@string/coni_switch_message"
                android:textColor="@color/res_textColor_1"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/goto_set_btn"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_bg_sharp"
                android:gravity="center"
                android:text="@string/coni_switch_set"
                android:textColor="@color/res_blue_btn_selector"
                android:textSize="16dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/url_img"
            android:layout_width="290dp"
            android:layout_height="292dp"
            android:src="@drawable/icon_alipay"
            android:scaleType="fitXY"
            android:visibility="gone" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tv_not_mind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_hint"
            android:textSize="16dp"
            android:textColor="@color/res_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:layout_width="0dp"
            android:background="@color/res_white"
            android:layout_height="2px"
            android:layout_below="@id/tv_not_mind"
            app:layout_constraintEnd_toEndOf="@id/tv_not_mind"
            app:layout_constraintStart_toStartOf="@id/tv_not_mind"
            app:layout_constraintTop_toBottomOf="@id/tv_not_mind">
        </View>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>