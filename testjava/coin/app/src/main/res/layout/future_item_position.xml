<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_contrack_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/res_textColor_1"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/current_delegation_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/tv_contrack_name"
            android:background="@drawable/bg_green_sharp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="@string/side_long"
            android:textColor="@color/res_white"
            android:textSize="11dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_total_hold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/future_item_num"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_total_hold_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_total_hold"
            android:layout_marginTop="2.4dp"
            android:text="--"
            android:textColor="@color/res_textColor_1"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_force_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/realized_profit_loss"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_force_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_force_price"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2.4dp"
            android:text="--"
            android:textColor="@color/res_red"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_unrealized_profit_loss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_total_hold_value"
            android:layout_marginTop="10dp"
            android:text="@string/return_percent"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_unrealized_profit_loss_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_unrealized_profit_loss"
            android:layout_marginTop="2.4dp"
            android:text="--"
            android:textColor="@color/res_red"
            android:textSize="13dp" />


        <TextView
            android:id="@+id/tv_not_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_total_hold_value"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:text="@string/unrealized_profit_loss"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_not_win_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_not_win"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2.4dp"
            android:text="--"
            android:textColor="@color/res_red"
            android:textSize="13dp" />


    </RelativeLayout>

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/res_item_divider" />
</LinearLayout>