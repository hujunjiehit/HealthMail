<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/commom_menu_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/view_content"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/market_item_bg" />

            <RelativeLayout
                android:id="@+id/mail_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/market_item_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/left_email_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_email"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/email_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/bind_email_tv"
                    android:text=""
                    android:textColor="@color/res_editColor_hint"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/bind_email_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/arrow_img0"
                    android:text="@string/setting_bind"
                    android:textColor="@color/res_editColor_hint"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/arrow_img0"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />


            <RelativeLayout
                android:id="@+id/phone_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/market_item_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/left_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_phone"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/bind_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/arrow_img1"
                    android:text="@string/setting_bind"
                    android:textColor="@color/res_editColor_hint"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/arrow_img1"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:id="@+id/google_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/market_item_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/left_google_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_google_auth"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/bind_google_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/arrow_img2"
                    android:text="@string/setting_bind"
                    android:textColor="@color/res_editColor_hint"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/arrow_img2"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:id="@+id/changeType_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/market_item_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/left_check_selected_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_check_selected"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/check_txt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/arrow_img3"
                    android:textColor="@color/res_editColor_hint"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/arrow_img3"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:id="@+id/rl_auth"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/market_item_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/real_nameauthentication"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/iv_auth_state"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="7.2dp"
                    android:layout_toLeftOf="@+id/tv_auth_state"
                    android:src="@drawable/icon_auth_status_tip"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_auth_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/iv_right"
                    android:text=""
                    android:textColor="@color/res_editColor_hint"
                    android:textSize="14dp" />


                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:id="@+id/auth_line_view"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:id="@+id/rl_bind_pay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/market_item_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="支付绑定"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/tv_pay_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/iv_right_pay"
                    android:text=""
                    android:textColor="@color/res_blue"
                    android:textSize="14dp" />


                <ImageView
                    android:id="@+id/iv_right_pay"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <!--
            <RelativeLayout
                android:id="@+id/modify_pwd_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/market_item_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/left_modify_pwd_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_modify_login_pwd"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="@dimen/size_16" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>
