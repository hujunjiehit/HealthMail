            <!--
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />
                -->
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/res_divider_tile" />

            <RelativeLayout
                android:id="@+id/modify_cap_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/market_item_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/left_capital_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_capital_pwd"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/capital_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/arrow_img4"
                    android:text="@string/setting_item_set"
                    android:textColor="@color/res_editColor_hint"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/arrow_img4"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:id="@+id/gesture_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/market_item_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/left_gesture_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_gesture_pwd"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="15dp" />

                <ToggleButton
                    android:id="@+id/gesture_tg_btn"
                    android:layout_width="38dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/gesture_btn_bg"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>

            <View
                android:id="@+id/finger_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/fingerprint_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/market_item_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/finger_gesture_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_finger_pwd"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="15dp" />

                <ToggleButton
                    android:id="@+id/finger_tg_btn"
                    android:layout_width="38dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/gesture_btn_bg"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/res_divider_tile" />

            <RelativeLayout
                android:id="@+id/address_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/market_item_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/left_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_address"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/arrow_img5"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/res_divider_tile" />

            <RelativeLayout
                android:id="@+id/site_main_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/market_item_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_site_label"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/site_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/arrow_img6"
                    android:text="--"
                    android:textColor="@color/res_blue"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/arrow_img6"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:id="@+id/launague_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="@drawable/market_item_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_launage_tv"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/lanuage_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/arrow_img7"
                    android:text="--"
                    android:textColor="@color/res_blue"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/arrow_img7"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/res_divider_tile" />

            <RelativeLayout
                android:id="@+id/about_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/market_item_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/left_about_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_about"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:id="@+id/quit_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="@drawable/market_item_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/left_quit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_quit"
                    android:textColor="@color/res_red"
                    android:textSize="15dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/res_background" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
