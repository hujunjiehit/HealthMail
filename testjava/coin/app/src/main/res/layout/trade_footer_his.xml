<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/footer_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/view_more"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/res_selector_item_press_status"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/look_all_history_order"
        android:textColor="@color/res_blue"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/empty_view"
        android:layout_width="171dp"
        android:layout_height="76.5dp"
        android:src="@drawable/icon_null"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:text="@string/empty_txt"
        android:textColor="@color/res_textColor_3"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@+id/empty_view"
        app:layout_constraintStart_toStartOf="@+id/empty_view"
        app:layout_constraintTop_toBottomOf="@+id/empty_view" />


</androidx.constraintlayout.widget.ConstraintLayout>
