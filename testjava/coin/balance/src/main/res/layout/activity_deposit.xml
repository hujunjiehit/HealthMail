<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/res_background"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_top"
        layout="@layout/commom_menu_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <RelativeLayout
                android:id="@+id/rl_deposit_address_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/res_assistColor_19_80"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/iv_warning"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_warning_yellow" />

                <TextView
                    android:id="@+id/tv_deposit_address_tip"
                    android:layout_toEndOf="@+id/iv_warning"
                    android:layout_width="match_parent"
                    android:layout_marginStart="5dp"
                    android:textSize="13dp"
                    android:layout_height="wrap_content"
                    android:textColor="#f99c03" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_chains"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:text="@string/chain_name"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="14dp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rl_chains"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_tip1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_deposit_tip"
                android:paddingBottom="10dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/res_assistColor_22" />

                <TextView
                    android:id="@+id/tv_tip1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="14dp"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_tip1_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_tip1_title"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="14dp"
                    android:textColor="@color/res_textColor_2"
                    android:textSize="13dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_tip1_describe"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/tb_tip1"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/deposit_checked_bg"
                        android:checked="false"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:id="@+id/tv_tip1_kown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="@string/i_kown"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="13dp" />
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_tip2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_tip1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_deposit_tip"
                android:paddingBottom="10dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/res_assistColor_23" />

                <TextView
                    android:id="@+id/tv_tip2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="14dp"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_tip2_title"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/tb_tip2"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/deposit_checked_bg"
                        android:checked="false"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:id="@+id/tv_tip2_kown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="@string/i_kown"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="13dp" />
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_have_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_tip2"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                    <View
                        android:id="@+id/view_center"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/res_divider_tile" />

                    <TextView
                        android:id="@+id/tv_deposit_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/deposit_address"
                        android:textColor="@color/res_textColor_2"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/iv_deposit_warn"
                        android:layout_width="11.6dp"
                        android:layout_height="11.6dp"
                        android:layout_below="@+id/view_center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="24dp"
                        android:layout_toRightOf="@+id/tv_deposit_address"
                        android:src="@drawable/icon_warning" />

                    <TextView
                        android:id="@+id/tv_dont_deposit1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="21dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/iv_deposit_warn"
                        android:text="@string/recharge_tips3_new"
                        android:textColor="@color/res_red"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_deposit_address_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_dont_deposit1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_deposit_address_value"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_display_qr_code"
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_deposit_btn"
                            android:gravity="center"
                            android:text="@string/display_qr_code"
                            android:textColor="@color/res_blue"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_copy_address"
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_deposit_btn"
                            android:gravity="center"
                            android:text="@string/copy_address"
                            android:textColor="@color/res_blue"
                            android:textSize="15dp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_address"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tv_check_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="请阅读以上"
                        android:textColor="@color/res_background"
                        android:textSize="18dp"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/view_center2"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/res_divider_tile" />

                    <LinearLayout
                        android:id="@+id/ll_tag_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_center2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_tag_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view_center2"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/res_textColor_2"
                            android:textSize="14dp" />


                        <TextView
                            android:id="@+id/tv_tag_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_tag_title"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/res_textColor_1"
                            android:textSize="14dp" />

                        <LinearLayout
                            android:id="@+id/ll_tag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_tag_value"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_copy_tag"
                                android:layout_width="0dp"
                                android:layout_height="49dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_deposit_btn"
                                android:gravity="center"
                                android:text="@string/copy_tag"
                                android:textColor="@color/res_blue"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="49dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_deposit_btn"
                                android:gravity="center"
                                android:text="@string/copy_address"
                                android:textColor="@color/res_blue"
                                android:textSize="15dp"
                                android:visibility="invisible" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_how_mach_sure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_tag_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:text="@string/copy_address"
                        android:textColor="@color/res_assistColor_22"
                        android:textSize="13dp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_do_deposit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="160dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/create_btn"
                    android:layout_width="230dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_bg_sharp"
                    android:gravity="center"
                    android:text="@string/deposit"
                    android:textColor="@color/res_white"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/create_btn"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="11.6dp"
                        android:layout_height="11.6dp"
                        android:layout_gravity="top"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/icon_warning" />

                    <TextView
                        android:id="@+id/tv_dont_deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_tip2_title"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/tb_tip2"
                        android:text="@string/recharge_tips3_new"
                        android:textColor="@color/res_red"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>