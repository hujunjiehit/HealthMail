<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/res_background">

    <include
        layout="@layout/common_layout_top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></include>

    <View
        android:id="@+id/divider_view"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/res_divider_tile"
        app:layout_constraintStart_toStartOf="@+id/layout_top_bar"
        app:layout_constraintTop_toBottomOf="@+id/layout_top_bar"></View>

    <TextView
        android:id="@+id/tv_coin_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/res_repay_coin_type"
        android:textColor="@color/res_textColor_1"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="@+id/layout_top_bar"
        app:layout_constraintTop_toBottomOf="@+id/divider_view" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/spinner_coin_type"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:text="--"
        android:textColor="@color/res_textColor_1"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_coin_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_coin_type"
        app:qmui_borderColor="@color/res_border_color"
        app:qmui_borderWidth="2px"
        app:qmui_radius="3dp" />

    <ImageView
        android:id="@+id/iv_coin_type"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/res_down_arrow_big"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_coin_type"
        app:layout_constraintEnd_toEndOf="@+id/spinner_coin_type"
        app:layout_constraintTop_toTopOf="@+id/spinner_coin_type" />


    <TextView
        android:id="@+id/tv_coin_pair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/res_repay_coin_pair"
        android:textColor="@color/res_textColor_1"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="@+id/layout_top_bar"
        app:layout_constraintTop_toBottomOf="@+id/spinner_coin_type" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/spinner_coin_pair"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:text="--/--"
        android:textColor="@color/res_textColor_1"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_coin_pair"
        app:layout_constraintTop_toBottomOf="@+id/tv_coin_pair"
        app:qmui_borderColor="@color/res_border_color"
        app:qmui_borderWidth="2px"
        app:qmui_radius="3dp" />

    <ImageView
        android:id="@+id/iv_coin_pair"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/res_down_arrow_big"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_coin_pair"
        app:layout_constraintEnd_toEndOf="@+id/spinner_coin_pair"
        app:layout_constraintTop_toTopOf="@+id/spinner_coin_pair" />


    <TextView
        android:id="@+id/tv_remain_repay_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/res_remain_repay_number"
        android:textColor="@color/res_textColor_1"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="@+id/layout_top_bar"
        app:layout_constraintTop_toBottomOf="@+id/spinner_coin_pair" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/spinner_remain_repay_nuber"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:text="--"
        android:textColor="@color/res_textColor_3"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_remain_repay_number"
        app:layout_constraintTop_toBottomOf="@+id/tv_remain_repay_number"
        app:qmui_backgroundColor="@color/res_divider_tile"
        app:qmui_borderColor="@color/res_border_color"
        app:qmui_borderWidth="2px"
        app:qmui_radius="3dp" />


    <TextView
        android:id="@+id/tv_borrow_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/res_repay_number"
        android:textColor="@color/res_textColor_1"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="@+id/layout_top_bar"
        app:layout_constraintTop_toBottomOf="@+id/spinner_remain_repay_nuber" />

    <EditText
        android:id="@+id/edit_repay_number"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        style="@style/CoinBene.EditText"
        android:gravity="left|center_vertical"
        android:inputType="number|numberDecimal"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_borrow_number"
        app:layout_constraintTop_toBottomOf="@+id/tv_borrow_number" />

    <TextView
        android:id="@+id/tv_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/all_acount"
        android:textColor="@color/res_blue"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_repay_number"
        app:layout_constraintEnd_toEndOf="@+id/edit_repay_number"
        app:layout_constraintTop_toTopOf="@+id/edit_repay_number" />

    <TextView
        android:id="@+id/tv_max_repay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/res_max_repay_number"
        android:textColor="#f99c03"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="@+id/edit_repay_number"
        app:layout_constraintTop_toBottomOf="@+id/edit_repay_number" />


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/btn_borrow"
        style="@style/CoinBene.Button"
        android:layout_width="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:text="@string/btn_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>