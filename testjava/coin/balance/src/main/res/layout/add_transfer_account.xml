<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/res_background"
    android:orientation="vertical">

    <include
        android:id="@+id/title_top"
        layout="@layout/commom_menu_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_marginTop="10dp"
            android:background="@color/res_background">

            <TextView
                android:id="@+id/fee_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/mark_tab"
                android:textColor="@color/res_textColor_1"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/withDraw_tips"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:hint="@string/an_example"
                android:singleLine="true"
                android:textColor="@color/res_textColor_1"
                android:textColorHint="@color/res_textColor_3"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/close_view1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_below="@+id/fee_tv"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/zxing_layout"
                android:src="@drawable/icon_close"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:background="@color/res_item_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/res_background"
            android:minHeight="71dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/withdraw_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/account"
                android:textColor="@color/res_textColor_1"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/address_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/withdraw_address_tv"
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/email_or_phone"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textColor="@color/res_textColor_1"
                android:textColorHint="@color/res_textColor_3"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/close_view"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_below="@+id/withdraw_address_tv"
                android:layout_alignParentRight="true"
                android:layout_marginTop="14dp"
                android:layout_toLeftOf="@id/zxing_layout"
                android:src="@drawable/icon_close"
                android:visibility="gone" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:background="@color/res_item_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_marginTop="10dp"
            android:background="@color/res_background">

            <TextView
                android:id="@+id/cap_pwd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/cap_pwd_label"
                android:textColor="@color/res_textColor_1"
                android:textSize="13dp" />

            <com.coinbene.common.widget.EditTextTwoIcon
                android:id="@+id/cap_pwd_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:hint="@string/cap_pwd_hint"
                android:inputType="numberPassword"
                android:singleLine="true"
                android:textColor="@color/res_textColor_1"
                android:textColorHint="@color/res_textColor_3"
                android:textSize="16dp" />

        </RelativeLayout>

        <View
            android:id="@+id/goole_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:background="@color/res_item_divider" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/submmit_btn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_bg_sharp"
            android:gravity="center"
            android:text="@string/submmit"
            android:textColor="@color/res_white"
            android:textSize="18dp" />
    </LinearLayout>


</LinearLayout>
