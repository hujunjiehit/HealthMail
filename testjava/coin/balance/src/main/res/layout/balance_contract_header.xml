<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/res_background"
    android:orientation="vertical">

    <include
        layout="@layout/layout_account_info"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textSize="16dp"
            android:textColor="@color/res_textColor_1"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:text="@string/current_balance"/>

        <TextView
            android:id="@+id/tv_contract_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:textSize="15dp"
            android:textColor="@color/res_blue"
            android:layout_marginRight="15dp"
            android:gravity="end"
            android:text="@string/res_usdt_contract_record"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:background="@color/res_item_divider"></View>

    <RelativeLayout
        android:id="@+id/current_balance_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:background="@color/res_background"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/first_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_balance"
            android:textColor="@color/res_textColor_2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/second_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_tv"
            android:layout_marginTop="12dp"
            android:text="@string/unrealized_profit_loss"
            android:textColor="@color/res_textColor_2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/third_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/second_tv"
            android:layout_marginTop="12dp"
            android:text="@string/current_balance"
            android:textColor="@color/res_textColor_2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/fourth_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/third_tv"
            android:layout_marginTop="12dp"
            android:text="@string/contract_avl_balance"
            android:textColor="@color/res_textColor_2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/first_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/first_tv"
            android:layout_alignParentRight="true"
            android:text="--"
            android:textColor="@color/res_textColor_1"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/second_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/second_tv"
            android:layout_alignParentRight="true"
            android:text="--"
            android:textColor="@color/res_red"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/third_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/third_tv"
            android:layout_alignParentRight="true"
            android:text="--"
            android:textColor="@color/res_textColor_1"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/fourth_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fourth_tv"
            android:layout_alignParentRight="true"
            android:text="--"
            android:textColor="@color/res_textColor_1"
            android:textSize="15dp" />
    </RelativeLayout>

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_alignParentBottom="true"
        android:background="@color/res_divider_tile" />

    <TextView
        android:id="@+id/tip_order_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/balance_ft_holder"
        android:textColor="@color/res_textColor_1"
        android:textSize="16dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:background="@color/res_item_divider"></View>

</LinearLayout>