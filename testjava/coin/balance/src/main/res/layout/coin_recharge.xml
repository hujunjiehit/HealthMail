<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/res_background"
    android:orientation="vertical">

    <include layout="@layout/commom_menu_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/qr_address_img"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/coin_address_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/qr_address_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_horizontal"
                    android:text="--"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/create_btn"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/btn_bg_sharp"
                    android:gravity="center"
                    android:text="@string/deposit"
                    android:textColor="@color/res_white"
                    android:textSize="16dp"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:background="@color/res_divider_tile"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/recharge_tips0_new"
                    android:textColor="@color/res_assistColor_22"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/text_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/recharge_tips1_new"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/text_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2.4dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/recharge_tips2_new"
                    android:textColor="@color/res_textColor_2"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/text_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/recharge_tips3_new"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/text_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2.4dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/recharge_tips4_new"
                    android:textColor="@color/res_textColor_2"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/text_tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/recharge_tips5_new"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/text_tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2.4dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/recharge_tips6_new"
                    android:textColor="@color/res_textColor_2"
                    android:textSize="12dp" />

                <RelativeLayout
                    android:id="@+id/remark_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_remark_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remark"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/remark_ed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_remark_title"
                        android:text=""
                        android:textColor="@color/res_textColor_1"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/iv_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/remark_ed"
                        android:layout_alignStart="@+id/remark_ed"
                        android:layout_marginTop="5dp"
                        android:text="@string/copy"
                        android:textColor="@color/res_blue"
                        android:textSize="13dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/rl_coin_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/icon_warning" />

                    <TextView
                        android:id="@+id/tv_coin_tip_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/res_red"
                        android:textSize="13dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_copy"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="100dp">

                <TextView
                    android:id="@+id/copy_btn"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_bg_sharp"
                    android:gravity="center"
                    android:text="@string/copy_address"
                    android:textColor="@color/res_blue_btn_selector"
                    android:textSize="16dp"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</LinearLayout>
