<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_view"
        android:layout_marginBottom="64dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/res_assistColor_19_80"
                android:minHeight="48dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/icon_warning_yellow" />

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="16dp"
                    android:text="@string/res_transfer_disable"
                    android:textColor="@color/res_assistColor_22"
                    tools:text="这里是暂停提币提示文案" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:minHeight="71dp"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/withdraw_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/account_number"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />


                <EditText
                    android:id="@+id/withdraw_address_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/withdraw_address_tv"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/email_or_phone"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColor="@color/res_textColor_1"
                    android:textColorHint="@color/res_textColor_3"
                    android:textSize="16dp" />
                <!--android:hint="@string/with_draw_address_hint"-->
                <ImageView
                    android:id="@+id/close_view"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_below="@+id/withdraw_address_tv"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/ll_arrow_right"
                    android:src="@drawable/icon_close"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_arrow_right"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/withdraw_address_tv"
                    android:layout_alignParentRight="true"
                    android:gravity="right|bottom"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp">

                    <ImageView
                        android:id="@+id/arrow_right"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/right_arrow" />
                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/text_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/transfer_count"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/min_withDraw"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="30"
                    android:textColor="@color/res_textColor_1"
                    android:textColorHint="@color/res_textColor_3"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/text_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toLeftOf="@+id/view"
                    android:text="--"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="16dp" />

                <View
                    android:id="@+id/view"
                    android:layout_width="0.8dp"
                    android:layout_height="18dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toLeftOf="@+id/text_all"
                    android:background="@color/res_item_divider" />

                <TextView
                    android:id="@+id/text_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/all_acount"
                    android:textColor="@color/res_blue"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:id="@+id/left_avable_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@color/res_textColor_2"
                        android:text="@string/aviable_num_label_transfer_new"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="13dp" />

                    <ImageView
                        android:id="@+id/iv_icon_notice"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@+id/left_avable_label"
                        android:src="@drawable/icon_notice"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/able_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/iv_icon_notice"
                        android:text="--"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="13dp" />
                </RelativeLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/fee_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/block_fee_label"
                    android:textColor="@color/res_textColor_3"
                    android:textColorHint="@color/res_textColor_3"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/fee_tv_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/fee_tv"
                    android:text="@string/free_admission"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/actual_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/actual_account_value"
                    android:text="@string/actual_account"
                    android:textColor="@color/res_textColor_3"
                    android:textColorHint="@color/res_textColor_3"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/actual_account_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="--"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/cap_pwd_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/cap_pwd_label"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <com.coinbene.common.widget.EditTextTwoIcon
                    android:id="@+id/cap_pwd_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="@string/cap_pwd_hint"
                    android:inputType="number"
                    android:textColor="@color/res_textColor_1"
                    android:textColorHint="@color/res_textColor_3"
                    android:textSize="16dp" />

            </RelativeLayout>

            <View
                android:id="@+id/msg_code_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:id="@+id/msg_code_layout"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/left_msg_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/set_reset_cap_phone_label"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/msg_code_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:hint="@string/please_input_msg_code"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textColor="@color/res_textColor_1"
                    android:textColorHint="@color/res_textColor_3"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/send_msgcode_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/user_send_msg_code"
                    android:textColor="@color/res_blue"
                    android:textSize="16dp" />
            </RelativeLayout>

            <View
                android:id="@+id/google_line_view"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:id="@+id/google_layout"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/google_auth_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/google_auth_code_label"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/google_code_inpout"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:hint="@string/google_auth_code_hint"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textColor="@color/res_textColor_1"
                    android:textColorHint="@color/res_textColor_3"
                    android:textSize="16dp" />

            </RelativeLayout>

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <View
                android:id="@+id/xrp_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/xrp_layout"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/destination_tg_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/xrp_withdraw_label"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/destination_tg_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:hint="@string/xrp_withdraw_hint"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textColor="@color/res_textColor_1"
                    android:textColorHint="@color/res_textColor_3"
                    android:textSize="16dp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/submmit_btn"
        style="@style/CoinBene.Button"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:text="@string/submmit" />

</RelativeLayout>