<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/res_background"
    android:paddingTop="16dp">

    <RelativeLayout
        android:id="@+id/menu_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/res_icon_back" />
    </RelativeLayout>


    <com.qmuiteam.qmui.widget.QMUIFontFitTextView
        android:id="@+id/menu_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text=""
        android:textColor="@color/res_textColor_1"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/menu_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:textColor="@color/res_textColor_2"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/search_img"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:background="@drawable/res_icon_search"
        android:gravity="center"
        android:visibility="gone" />

    <View
        android:id="@+id/menu_line_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/res_item_divider"
        android:visibility="gone" />
</RelativeLayout>


