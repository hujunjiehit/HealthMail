<?xml version="1.0" encoding="utf-8"?>
<com.coinbene.common.widget.BottomTabView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_imgview"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:focusable="false" />

    <TextView
        android:id="@+id/item_label_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1.6dp"
        android:layout_marginBottom="5dp"
        android:gravity="bottom|center_horizontal"
        android:textColor="@color/res_selector_tv3_select_blue"
        android:textSize="10dp" />

</com.coinbene.common.widget.BottomTabView>