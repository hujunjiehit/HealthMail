<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_back"
        android:layout_width="270dp"
        android:layout_height="0dp"
        android:background="@drawable/brick_red_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="39dp"
        android:text="@string/respected_users"
        android:textColor="#ab3b16"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/view_back"
        app:layout_constraintTop_toTopOf="@+id/view_back" />

    <com.coinbene.common.widget.app.JustifyTextView
        android:id="@+id/tv_discrbe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="@string/contract_match_describe"
        android:textColor="#ab3b16"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@id/view_back"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:text="@string/string_btn_cancel"
        android:textColor="#ab3b16"
        android:background="@drawable/dialog_tip_cancel_sharp"
        app:layout_constraintEnd_toStartOf="@+id/btn_trade"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/tv_discrbe"
        app:layout_constraintTop_toBottomOf="@+id/tv_discrbe"
        tools:layout_editor_absoluteY="87dp" />

    <Button
        android:id="@+id/btn_trade"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:text="@string/contract_to_trade"
        android:textColor="#ffffff"
        android:background="@drawable/dialog_tip_sure_sharp"
        app:layout_constraintEnd_toEndOf="@+id/tv_discrbe"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/btn_cancel"
        app:layout_constraintTop_toBottomOf="@+id/tv_discrbe"
        tools:layout_editor_absoluteY="87dp" />

    <TextView
        android:id="@+id/tv_not_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="38dp"
        android:text="@string/not_hint"
        android:textColor="#cc7f65"
        app:layout_constraintBottom_toBottomOf="@id/view_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>