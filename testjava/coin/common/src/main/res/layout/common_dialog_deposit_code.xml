<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="360dp"
    android:background="@drawable/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center|bottom"
            android:background="@drawable/icon_close_new" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_deposit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text=""
        android:textColor="@color/res_textColor_1"
        android:textSize="17dp" />


    <ImageView
        android:id="@+id/iv_qr_code"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_below="@+id/tv_deposit_title"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp" />


    <TextView
        android:id="@+id/tv_qr_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_qr_code"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@color/res_textColor_1"
        android:textSize="17dp" />


    <TextView
        android:id="@+id/tv_save"
        android:layout_width="170dp"
        android:layout_height="49dp"
        android:layout_below="@+id/tv_qr_account"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg_sharp"
        android:gravity="center"
        android:text="@string/save_qr_code"
        android:textColor="@color/res_white"
        android:textSize="15dp" />
</RelativeLayout>
