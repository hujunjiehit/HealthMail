<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:gravity="center">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:text="@string/bond_model"
        android:textColor="@color/res_textColor_1"
        android:textSize="20dp" />


    <LinearLayout
        android:id="@+id/ll_change_model"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_crossed_position"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/tv_crossed_position"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_trade_cancel"
                android:gravity="center"
                android:text="@string/crossed_position"
                android:textColor="@color/res_textColor_1"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/iv_crossed_position"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/icon_right_bottom_selected" />
        </RelativeLayout>


        <RelativeLayout

            android:id="@+id/rl_fixed_position"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_gradually_position"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_trade_defoat"
                android:gravity="center"
                android:text="@string/gradually_position"
                android:textColor="@color/res_textColor_1"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/iv_gradually_position"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/icon_right_bottom_selected"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_crossed_position_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_change_model"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:text="@string/crossed_position_title"
        android:textColor="@color/res_textColor_2"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_crossed_position_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_crossed_position_title"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/crossed_position_des"
        android:textColor="@color/res_textColor_2"
        android:textSize="14dp" />


    <TextView
        android:id="@+id/tv_gradually_position_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_crossed_position_des"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/gradually_position_title"
        android:textColor="@color/res_textColor_2"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_gradually_position_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_gradually_position_title"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/gradually_position_des"
        android:textColor="@color/res_textColor_2"
        android:textSize="14dp" />


    <View

        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_below="@+id/tv_gradually_position_des"
        android:layout_marginTop="20dp"
        android:background="@color/res_item_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/view_line"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"

            android:text="@string/btn_cancel"
            android:textAllCaps="false"
            android:textColor="@color/res_textColor_3"
            android:textSize="17dp" />
        <!--        android:background="@drawable/update_left_btn_bg"-->

        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/res_item_divider" />

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="@string/btn_ok"
            android:textAllCaps="false"
            android:textColor="@color/res_blue"
            android:textSize="17dp" />
        <!--        android:background="@drawable/update_right_btn_bg"-->
    </LinearLayout>

</RelativeLayout>
