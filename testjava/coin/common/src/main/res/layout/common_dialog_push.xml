<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_push_icon"
        android:layout_width="61.6dp"
        android:layout_height="65.6dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="108.4dp"
        android:src="@drawable/icon_dialog_push" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_push_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="이벤트 소식 및 새 프로젝트 상장 소식 등 특별한 정보를 받으시겠습니까?"
        android:textColor="@color/res_textColor_2"
        android:textSize="15sp" />




    <LinearLayout
        android:id="@+id/dialog_button_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/dialog_push_icon"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/dialog_push_no"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_blue_bg"
            android:gravity="center"
            android:text="No"
            android:textColor="#3b7bfd"
            android:textSize="16sp" />


        <Button
            android:id="@+id/dialog_push_ok"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:background="@drawable/btn_bg_sharp"
            android:gravity="center"
            android:text="Yes"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_button_layout"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:textColor="@color/res_textColor_2"
            android:text="* 알람 수신은 단말 기준입니다" />

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/res_textColor_2"
            android:text="* 이벤트 소식 및 새 프로젝트 상장 소식 등 특별한 정보를 받으실 수 있습니다" />


    </LinearLayout>

</RelativeLayout>