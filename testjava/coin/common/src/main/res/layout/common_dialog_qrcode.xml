<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="390dp"
    android:background="@drawable/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/qr_code_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center|bottom"
            android:background="@drawable/icon_close_new" />
    </LinearLayout>


    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/community_qr_code"
        android:layout_marginBottom="12dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/Invitation_join_community"
        android:textColor="@color/res_textColor_1"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/community_qr_code"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/community_wechat_code" />


    <LinearLayout
        android:id="@+id/layout_wechat_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/community_qr_code"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_show_wechat_number"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Wechat_number"/>

        <ImageView
            android:id="@+id/iv_copy"
            android:layout_marginLeft="10dp"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/icon_copy"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:id="@+id/code_tv_save"
        android:layout_width="170dp"
        android:layout_height="49dp"
        android:layout_below="@id/layout_wechat_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_bg_sharp"
        android:gravity="center"
        android:text="@string/save_qr_code"
        android:textColor="@color/res_white"
        android:textSize="15dp" />

</RelativeLayout>
