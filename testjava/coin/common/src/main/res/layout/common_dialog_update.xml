<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/update_top_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1dp"
        android:background="@drawable/dialog_update_bg_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:text="@string/discover_version"
            android:textColor="@color/res_textColor_1"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:minHeight="100dp"
            android:text=""
            android:textColor="@color/res_textColor_1"
            android:textSize="15dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginTop="20dp"
            android:background="@color/res_item_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/update_left_btn_bg"
                android:text="@string/update_btn_reject"
                android:textAllCaps="false"
                android:textColor="@color/res_textColor_3"
                android:textSize="17dp" />

            <View
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:background="@color/res_item_divider" />

            <Button
                android:id="@+id/btn_update"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/update_right_btn_bg"
                android:text="@string/version_update_label"
                android:textAllCaps="false"
                android:textColor="@color/res_blue"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>