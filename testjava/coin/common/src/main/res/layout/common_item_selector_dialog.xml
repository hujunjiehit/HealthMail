<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_selector_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#7c88a0"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="合约账户"/>

    <TextView
        android:id="@+id/tv_item_status"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textColor="@color/res_assistColor_22"
        android:background="#1ef5a624"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="13dp"
        android:gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_selector_item"
        tools:text="暂停划转" />
</androidx.constraintlayout.widget.ConstraintLayout>