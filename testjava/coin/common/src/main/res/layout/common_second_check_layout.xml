<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="295dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/dialog_bg">

    <ImageView
        android:id="@+id/second_check_close"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/icon_close" />

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_check_close"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="27dp"
        android:layout_marginLeft="27dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alertTitle"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/close_second_check"
            android:textSize="15sp"
            android:textColor="@color/res_textColor_1" />

        <LinearLayout
            android:id="@+id/sercond_check_verification_layout"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/check_verification_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_msg_code_label"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <EditText
                    android:id="@+id/second_check_edit"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/send_verification_code"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textSize="14dp"
                    android:singleLine="true"
                    android:textColorHint="@color/res_textColor_3" />

                <View
                    android:id="@+id/second_vertical_line"
                    android:layout_width="1dp"
                    android:layout_height="9dp"
                    android:background="@color/res_item_divider" />

                <TextView
                    android:id="@+id/dialog_send_SMS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/send_verification_code"
                    android:textColor="#3b7bfd"
                    android:textSize="14dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_marginTop="8.4dp"
                android:background="@color/res_item_divider" />


        </LinearLayout>

        <Button
            android:id="@+id/second_check_sure"
            android:layout_width="188dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:textColor="@color/res_white"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_bg_sharp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="@string/btn_confirm" />

    </LinearLayout>


</RelativeLayout>
