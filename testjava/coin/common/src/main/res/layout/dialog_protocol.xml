<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_protocol"
    android:layout_width="325dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/tv_Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/res_textColor_1"
        android:textSize="20dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="CoinBene合约交易风险提示" />

    <TextView
        android:id="@+id/tv_Content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:gravity="left"
        android:maxHeight="212dp"
        android:scrollbars="vertical"
        android:textColor="@color/res_textColor_1"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Title"
        tools:text="会员可以同意或拒绝CoinBene的营销及收信。\n \n如拒绝，则无法收到活动、新币上线、市场行情等最新的特别信息。" />

    <CheckBox
        android:id="@+id/checkbox_Agree"
        style="@style/CoinBene.CheckBox"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:checked="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Content" />

    <TextView
        android:id="@+id/tv_Pact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="left"
        android:textColor="@color/res_textColor_2"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_Content"
        app:layout_constraintStart_toEndOf="@+id/checkbox_Agree"
        app:layout_constraintTop_toBottomOf="@+id/tv_Content"
        tools:text="我已阅读和了解市场规则与风险，点击查看《合约用户协议》" />

    <TextView
        android:id="@+id/tv_Positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:alpha="0.5"
        android:enabled="false"
        android:gravity="end"
        android:textColor="@color/res_blue"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_Pact"
        app:layout_constraintTop_toBottomOf="@+id/tv_Pact"
        tools:text="进入交易" />

    <TextView
        android:id="@+id/tv_Negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:gravity="end"
        android:textColor="@color/res_textColor_2"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_Positive"
        app:layout_constraintTop_toTopOf="@+id/tv_Positive"
        tools:text="暂不交易" />
</androidx.constraintlayout.widget.ConstraintLayout>
