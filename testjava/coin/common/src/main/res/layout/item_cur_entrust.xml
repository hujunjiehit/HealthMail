<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/res_selector_item_press_status"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:paddingStart="15dp">

        <TextView
            android:id="@+id/left_top_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/res_red_1e"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:text=""
            android:textColor="@color/res_red"
            android:textSize="14dp"
            android:typeface="serif" />


        <TextView
            android:id="@+id/tv_order_type"
            android:layout_width="wrap_content"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:layout_marginStart="5dp"
            android:textSize="14dp"
            android:layout_toEndOf="@+id/left_top_tv"
            android:textColor="@color/res_textColor_1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/pair_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_top_tv"
            android:layout_marginTop="6dp"
            android:text="--"
            android:textColor="@color/res_textColor_1"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cancel_tv"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:text=""
            android:textColor="@color/res_textColor_3"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/trade_entrust"
            android:textColor="@color/res_blue"
            android:textSize="12dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        android:paddingStart="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entrust_price"
                android:textColor="@color/res_textColor_2"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/entrust_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="--"
                android:textColor="@color/res_textColor_1"
                android:textSize="14dp"
                android:typeface="serif" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_weight="4"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_entrust_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entrust_volume"
                android:textColor="@color/res_textColor_2"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/entrust_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="--"
                android:textColor="@color/res_textColor_1"
                android:textSize="14dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/quantity_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entrust_amount"
                android:textColor="@color/res_textColor_2"
                android:textSize="12dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/entrust_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="--"
                android:textColor="@color/res_textColor_1"
                android:textSize="14dp"
                android:visibility="gone" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_weight="0.5"
            android:gravity="right">

            <com.coinbene.common.widget.CircleProgressBar
                android:id="@+id/progress"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="3dp"
                app:line_count="30"
                app:line_width="4dp"
                app:progress_background_color="#D2D5E9"
                app:progress_end_color="@color/res_red"
                app:progress_shader="sweep"
                app:progress_start_color="@color/res_red"
                app:progress_stroke_cap="round"
                app:progress_stroke_width="2dp"
                app:progress_text_color="@color/res_green"
                app:progress_text_size="9dp"
                app:style="solid_line" />

        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/extra_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/filled_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/part_deal"
            android:textColor="@color/res_textColor_2"
            android:textSize="12dp"
            android:visibility="gone" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:background="@color/res_item_divider" />
</LinearLayout>
