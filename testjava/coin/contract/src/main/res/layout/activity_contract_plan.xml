<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/res_background">

    <include
        android:id="@+id/title"
        layout="@layout/commom_menu_layout" />

    <LinearLayout
        android:id="@+id/ll_order_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/title"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_market_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/market_price"
            android:textColor="@color/res_blue"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_limit_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fixed_price"
            android:textColor="@color/res_textColor_1"
            android:textSize="15dp" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/ll_order_type"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/view_limit"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:background="@color/res_blue"
                android:text="@string/fixed_price" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/view_market"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:background="@color/res_blue"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/ll_line"
        android:background="@color/res_item_divider" />


    <com.coinbene.common.widget.input.PlusSubInputView
        android:id="@+id/et_touch_price"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/line"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:hint="@string/please_input_coin_price_tip"
        android:imeOptions="actionDone"
        android:maxLength="20"
        android:textColor="@color/res_textColor_1"
        android:textColorHint="@color/res_editColor_hint"
        android:textSize="15dp" />


    <com.coinbene.common.widget.input.PlusSubInputView
        android:id="@+id/et_entrust_price"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_touch_price"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:imeOptions="actionDone"
        android:maxLength="20"
        android:textColor="@color/res_textColor_1"
        android:textColorHint="@color/res_editColor_hint"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/tv_unit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_entrust_price"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"

        android:layout_marginEnd="15dp"
        android:text="@string/open_unit_price"
        android:textColor="@color/res_textColor_1"
        android:textSize="13dp" />


    <com.coinbene.common.widget.input.PlusSubInputView
        android:id="@+id/et_close_cont"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_unit_price"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="20"
        android:textColor="@color/res_textColor_1"
        android:textColorHint="@color/res_editColor_hint"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_avl_close_cont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_close_cont"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:text="@string/avl_close_cont"
        android:textColor="@color/res_textColor_1"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seek_bar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textColor="@color/res_textColor_3"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_hundred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seek_bar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:text="100%"
        android:textColor="@color/res_textColor_3"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_cur_hold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seek_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:text="@string/cur_position"
        android:textColor="@color/res_textColor_1"
        android:textSize="12dp" />

    <com.coinbene.common.widget.seekbar.BubbleSeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_avl_close_cont"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="2dp"
        android:paddingTop="5dp"
        android:paddingRight="11dp"
        android:paddingBottom="5dp"
        app:bsb_bubble_color="@color/res_blue"
        app:bsb_bubble_text_color="@color/res_textColor_1"
        app:bsb_bubble_text_size="18sp"
        app:bsb_max="0"
        app:bsb_min="100"
        app:bsb_second_track_color="@color/res_blue"
        app:bsb_section_count="4"
        app:bsb_show_section_mark="true"
        app:bsb_show_top_progress="false"
        app:bsb_thumb_radius="6dp"
        app:bsb_thumb_text_size="18sp"
        app:bsb_touch_to_seek="true"
        app:bsb_track_color="@color/color_seekBar_background" />

    <TextView
        android:id="@+id/tv_expected_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_zero"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/expected_return"
        android:textColor="@color/res_textColor_1"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_expected_return_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_zero"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_expected_return"
        android:text="-- USDT"
        android:textColor="@color/res_textColor_1"
        android:textSize="13dp" />


    <TextView
        android:id="@+id/tv_contract_plan_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_sure"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp"
        android:text="@string/plan_close_tips"
        android:textColor="@color/res_textColor_2" />


    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_bg_sharp"
        android:gravity="center"
        android:text="@string/btn_confirm"
        android:textColor="@color/res_white"
        android:textSize="16dp" />

</RelativeLayout>