<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@color/res_background">


    <LinearLayout
        android:id="@+id/IOD_Layout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_iod_bg"
        android:clipChildren="false"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/update_increase"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_iod_left"
            android:gravity="center"
            android:text="@string/margin_add_text"
            android:textColor="@color/res_white"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/update_decrease"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/margin_sub_text"
            android:textColor="@color/res_textColor_1"
            android:textSize="13dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/update_input"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_rim"
        android:hint="@string/update_bail_increase"
        android:inputType="number|numberDecimal"
        android:paddingLeft="10dp"
        android:textColor="@color/res_textColor_1"
        android:textColorHint="#8b9fac"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/IOD_Layout"
        app:layout_constraintStart_toStartOf="@+id/IOD_Layout"
        app:layout_constraintTop_toBottomOf="@+id/IOD_Layout" />

    <TextView
        android:id="@+id/tv_price_unit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="BTC"
        android:textColor="@color/res_textColor_1"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/update_input"
        app:layout_constraintEnd_toEndOf="@+id/update_input"
        app:layout_constraintTop_toTopOf="@+id/update_input" />

    <TextView
        android:id="@+id/symbol_MOL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/update_bail_most"
        android:textColor="#6b7d8c"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/update_input"
        app:layout_constraintTop_toBottomOf="@+id/update_input" />

    <TextView
        android:id="@+id/mol_vol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="--"
        android:textColor="@color/res_textColor_1"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/symbol_MOL"
        app:layout_constraintStart_toEndOf="@+id/symbol_MOL"
        app:layout_constraintTop_toTopOf="@+id/symbol_MOL" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="BTC"
        android:textColor="@color/res_textColor_1"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/mol_vol"
        app:layout_constraintStart_toEndOf="@+id/mol_vol"
        app:layout_constraintTop_toTopOf="@+id/mol_vol" />

    <TextView
        android:id="@+id/symbol_force"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/updated_bail_increase"
        android:textColor="#6b7d8c"
        app:layout_constraintStart_toStartOf="@+id/symbol_MOL"
        app:layout_constraintTop_toBottomOf="@+id/symbol_MOL" />

    <TextView
        android:id="@+id/force_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="--"
        android:textColor="@color/res_textColor_1"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/symbol_force"
        app:layout_constraintStart_toEndOf="@+id/symbol_force"
        app:layout_constraintTop_toTopOf="@+id/symbol_force" />

    <View
        android:id="@+id/divider_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="@color/res_item_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/force_price" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_view">

        <TextView
            android:id="@+id/update_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/btn_cancel"
            android:textColor="@color/res_textColor_1"
            android:textSize="16dp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/res_item_divider" />

        <TextView
            android:id="@+id/update_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/btn_confirm"
            android:textColor="#3b7bfd"
            android:textSize="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>