<?xml version="1.0" encoding="utf-8"?>
<com.coinbene.manbiwang.contract.contractbtc.layout.ContractBtcTopLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_available_balance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:text="0"
            android:textColor="@color/res_textColor_1"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/tv_available_balance_value"
            android:paddingTop="6dp"
            android:text="BTC"
            android:textColor="@color/res_textColor_1"
            android:textSize="14dp" />

        <LinearLayout
            android:id="@+id/ll_transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_available_balance_value"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="3.6dp">

            <TextView
                android:id="@+id/tv_available_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contract_avl_balance"
                android:textColor="@color/res_textColor_2"
                android:textSize="11dp" />

            <ImageView
                android:id="@+id/iv_balance_transfer"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="3dp"
                android:src="@drawable/icon_account_transfer" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_position_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:paddingTop="6dp"
            android:text="@string/crossed_position"
            android:textColor="@color/res_textColor_1"
            android:textSize="14dp" />

        <LinearLayout
            android:id="@+id/ll_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_available_balance_value"
            android:layout_marginStart="115dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="3.6dp">

            <TextView
                android:id="@+id/tv_estimate_force_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bond_model"
                android:textColor="@color/res_textColor_2"
                android:textSize="11dp" />

            <ImageView
                android:id="@+id/iv_change_model"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="3dp"
                android:src="@drawable/icon_change_model" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_return_percent_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp"
            android:paddingTop="6dp"
            android:text="0%"
            android:textColor="@color/res_textColor_1"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_return_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_return_percent_value"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3.6dp"
            android:layout_marginEnd="35dp"
            android:text="@string/return_percent"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />

        <LinearLayout
            android:id="@+id/ll_display_hide"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end|center_vertical">

            <ImageView
                android:id="@+id/iv_display_hide"
                android:layout_width="9dp"
                android:layout_height="5dp"
                android:layout_marginEnd="7dp"
                android:src="@drawable/res_down_arrow_default" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_display_hide"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_account_balance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/res_textColor_1"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/tv_account_balance_value"
            android:text="BTC"
            android:textColor="@color/res_textColor_1"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_account_balance_value"
            android:layout_marginTop="3.6dp"
            android:text="@string/account_balance"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_unrealized_profit_loss_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:text="0"
            android:textColor="@color/res_textColor_1"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_unrealized_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/tv_unrealized_profit_loss_value"
            android:text="BTC"
            android:textColor="@color/res_textColor_1"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_unrealized_profit_loss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_unrealized_profit_loss_value"
            android:layout_marginStart="115dp"
            android:layout_marginTop="3.6dp"
            android:text="@string/unrealized_profit_loss"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_current_balance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/tv_balance_unit"
            android:text="0"
            android:textColor="@color/res_textColor_1"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_balance_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp"
            android:text="BTC"
            android:textColor="@color/res_textColor_1"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_current_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_current_balance_value"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3.6dp"
            android:layout_marginEnd="35dp"
            android:text="@string/current_balance"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />
    </RelativeLayout>

</com.coinbene.manbiwang.contract.contractbtc.layout.ContractBtcTopLayout>