<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rg_parent"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/rb_coin"
        android:layout_width="40dp"
        android:layout_height="18dp"
        android:gravity="center"
        android:textSize="11dp"
        android:background="@drawable/contract_unit_change_left"
        android:button="@null"
        android:textColor="@color/blue_white_text_selector"
        android:text="BTC" />

    <RadioButton
        android:id="@+id/rb_number"
        android:layout_width="40dp"
        android:layout_height="18dp"
        android:textSize="11dp"
        android:gravity="center"
        android:background="@drawable/contract_unit_change_right"
        android:button="@null"
        android:textColor="@color/blue_white_text_selector"
        android:text="@string/number" />


</RadioGroup>