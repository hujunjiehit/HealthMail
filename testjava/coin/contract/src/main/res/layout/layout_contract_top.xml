<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_change_symbol"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/res_icon_change_symbol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/res_textColor_1"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_change_symbol"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="BTC永续" />

    <TextView
        android:id="@+id/tv_position_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:drawablePadding="5dp"
        android:layout_marginStart="5dp"
        android:drawableRight="@drawable/res_yellow_bottom"
        android:background="@drawable/yellow_bg"
        android:paddingStart="6dp"
        android:gravity="center"
        android:paddingEnd="6dp"
        android:textColor="@color/res_assistColor_22"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_symbol"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="全仓" />

    <ImageView
        android:id="@+id/iv_contract_tip"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/res_icon_contract_tip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_kline"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_kline"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/res_kline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_more"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/res_icon_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>