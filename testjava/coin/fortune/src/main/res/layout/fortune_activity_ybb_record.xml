<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/res_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/layout_top_bar"
            layout="@layout/common_layout_top_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="2px"
            android:background="@color/res_item_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_top_bar"/>

        <View
            android:id="@+id/view_select_asset"
            android:layout_width="0dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toBottomOf="@id/layout_top_bar"
            app:layout_constraintEnd_toStartOf="@+id/view_select_biztype"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/res_all_asset"
            android:drawableEnd="@drawable/res_fortune_down"
            android:drawablePadding="7dp"
            app:layout_constraintTop_toTopOf="@id/view_select_asset"
            app:layout_constraintBottom_toBottomOf="@id/view_select_asset"
            app:layout_constraintStart_toStartOf="@id/view_select_asset"
            app:layout_constraintEnd_toEndOf="@id/view_select_asset"
            />

        <View
            android:id="@+id/view_select_biztype"
            android:layout_width="0dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toTopOf="@id/view_select_asset"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_select_asset" />

        <TextView
            android:id="@+id/tv_biz_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/res_all_type"
            android:drawableEnd="@drawable/res_fortune_down"
            android:drawablePadding="7dp"
            app:layout_constraintTop_toTopOf="@id/view_select_biztype"
            app:layout_constraintBottom_toBottomOf="@id/view_select_biztype"
            app:layout_constraintStart_toStartOf="@id/view_select_biztype"
            app:layout_constraintEnd_toEndOf="@id/view_select_biztype"/>


        <View
            android:id="@+id/divider_view"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/res_divider_tile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_select_asset"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_view"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
