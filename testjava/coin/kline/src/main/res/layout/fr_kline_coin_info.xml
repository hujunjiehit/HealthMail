<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_coin_name"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="--"
            android:textColor="@color/res_textColor_2"
            android:textSize="24dp" />


        <com.coinbene.common.widget.MoreTextView
            android:id="@+id/tv_disc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_coin_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:text="--"
            android:textColor="@color/res_textColor_2"
            android:textSize="14dp"
            app:foldLine="5"
            app:foldText="@string/take_up"
            app:tailTextColor="@color/res_blue"
            app:unFoldText="@string/look_whole" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_below="@+id/tv_disc"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#111111" />

        <TextView
            android:id="@+id/tv_send_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/coin_issue_time"
            android:textColor="@color/res_textColor_2"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_send_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="--"
            android:textColor="@color/res_textColor_2"
            android:textSize="14dp" />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_below="@+id/tv_send_time"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#111111" />

        <TextView
            android:id="@+id/tv_send_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/initial_price"
            android:textColor="@color/res_textColor_2"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_send_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line3"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="--"
            android:textColor="@color/res_textColor_2"
            android:textSize="14dp" />

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_below="@+id/tv_send_price"

            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#111111" />

        <TextView
            android:id="@+id/tv_send_vol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line4"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/coin_circulation_vol"
            android:textColor="@color/res_textColor_2"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_send_vol_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line4"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="--"
            android:textColor="@color/res_textColor_2"
            android:textSize="14dp" />

        <View
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_below="@+id/tv_send_vol"

            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#111111" />

        <TextView
            android:id="@+id/tv_total_vol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line5"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/total_amount"
            android:textColor="@color/res_textColor_2"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_total_vol_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line5"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="--"
            android:textColor="@color/res_textColor_2"
            android:textSize="14dp" />

        <View
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_below="@+id/tv_total_vol"

            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#111111" />

        <TextView
            android:id="@+id/tv_white_paper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line6"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/coin_white_paper"
            android:textColor="@color/res_textColor_2"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_white_paper_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line6"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:gravity="right"
            android:maxWidth="220dp"
            android:text="--"
            android:textColor="@color/res_textColor_2"
            android:textIsSelectable="true"
            android:textSize="14dp" />

        <View
            android:id="@+id/line7"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_below="@+id/tv_white_paper_value"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#111111" />

        <TextView
            android:id="@+id/tv_coin_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line7"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/coin_block_explorer"
            android:textColor="@color/res_textColor_2"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_coin_query_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line7"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:gravity="right"
            android:maxWidth="220dp"
            android:text="--"
            android:textColor="@color/res_textColor_2"
            android:textIsSelectable="true"
            android:textSize="14dp" />

        <View
            android:id="@+id/line8"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_below="@+id/tv_coin_query_value"

            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#111111" />

        <TextView
            android:id="@+id/tv_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line8"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/coin_official_website"
            android:textColor="@color/res_textColor_2"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_link_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line8"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:gravity="right"
            android:maxWidth="220dp"
            android:text="--"
            android:textColor="@color/res_textColor_2"
            android:textIsSelectable="true"
            android:textSize="14dp" />

        <!--<View-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="70dp"-->
            <!--android:layout_below="@+id/tv_link_value" />-->
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>