<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_price_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:text="¥--"
        android:textColor="@color/res_red"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="8888"/>

    <ImageView
        android:id="@+id/iv_rise_type"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:src="@drawable/res_red_down"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/tv_price_new"
        app:layout_constraintBottom_toBottomOf="@id/tv_price_new"
        app:layout_constraintStart_toEndOf="@id/tv_price_new"/>

    <TextView
        android:id="@+id/tv_rise_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="--"
        android:textColor="@color/res_red"
        android:textSize="14dp"
        tools:text="+0.85"
        app:layout_constraintStart_toStartOf="@id/tv_price_new"
        app:layout_constraintTop_toBottomOf="@id/tv_price_new" />

    <TextView
        android:id="@+id/tv_percent_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="--"
        android:textColor="@color/res_red"
        android:textSize="14dp"
        tools:text="+4.89%"
        app:layout_constraintStart_toEndOf="@id/tv_rise_value"
        app:layout_constraintTop_toBottomOf="@id/tv_rise_value"
        app:layout_constraintTop_toTopOf="@id/tv_rise_value" />

    <TextView
        android:id="@+id/tv_volume24_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/v24"
        android:layout_marginTop="8dp"
        android:textColor="@color/kline_text_color_grey"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@id/tv_price_new"
        app:layout_constraintTop_toBottomOf="@id/tv_rise_value"
        />

    <TextView
        android:id="@+id/tv_volume24_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:textColor="@color/kline_text_color_white"
        android:textSize="12dp"
        android:layout_marginStart="8dp"
        tools:text="100 张"
        app:layout_constraintStart_toEndOf="@id/tv_volume24_key"
        app:layout_constraintTop_toTopOf="@id/tv_volume24_key"
        app:layout_constraintBottom_toBottomOf="@id/tv_volume24_key"
        />



    <TextView
        android:id="@+id/tv_fund_fee_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/f8_kline"
        android:textColor="@color/kline_text_color_grey"
        android:textSize="12dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_fund_fee_value"
        app:layout_constraintTop_toTopOf="@id/tv_fund_fee_value"
        app:layout_constraintEnd_toStartOf="@id/tv_fund_fee_value"/>

    <TextView
        android:id="@+id/tv_high_price_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:text="@string/future_high_price"
        android:textColor="@color/kline_text_color_grey"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_high_price_value"
        app:layout_constraintStart_toStartOf="@id/tv_fund_fee_key"
        app:layout_constraintTop_toTopOf="@id/tv_high_price_value" />

    <TextView
        android:id="@+id/tv_low_price_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:text="@string/future_low_price"
        android:textColor="@color/kline_text_color_grey"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_low_price_value"
        app:layout_constraintStart_toStartOf="@id/tv_fund_fee_key"
        app:layout_constraintTop_toTopOf="@id/tv_low_price_value" />





    <TextView
        android:id="@+id/tv_fund_fee_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:text="--"
        android:textColor="@color/kline_text_color_white"
        android:textSize="12dp"
        tools:text="0.19995%"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_high_price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="--"
        android:textColor="@color/kline_text_color_white"
        android:textSize="12dp"
        tools:text="9332.9"
        app:layout_constraintEnd_toEndOf="@id/tv_fund_fee_value"
        app:layout_constraintTop_toBottomOf="@id/tv_fund_fee_value" />

    <TextView
        android:id="@+id/tv_low_price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="--"
        android:textColor="@color/kline_text_color_white"
        android:textSize="12dp"
        tools:text="8888.8"
        app:layout_constraintEnd_toEndOf="@id/tv_fund_fee_value"
        app:layout_constraintTop_toBottomOf="@id/tv_high_price_value" />



    <View
        android:id="@+id/view_container"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_volume24_key">
    </View>

    <!--开、高、低、收-->
    <TextView
        android:id="@+id/tv_open_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/k_chart_open"
        android:textColor="@color/kline_text_color_grey"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_high_value"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_container"
        tools:text="开 8408" />

    <TextView
        android:id="@+id/tv_high_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/k_chart_high"
        android:textColor="@color/kline_text_color_grey"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_low_value"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_open_value"
        app:layout_constraintTop_toTopOf="@id/tv_open_value"
        tools:text="高 8408" />

    <TextView
        android:id="@+id/tv_low_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/k_chart_low"
        android:textColor="@color/kline_text_color_grey"
        android:textSize="11dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_close_value"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_high_value"
        app:layout_constraintTop_toTopOf="@id/tv_open_value"
        tools:text="低 8408" />

    <TextView
        android:id="@+id/tv_close_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="@string/k_chart_close"
        android:textColor="@color/kline_text_color_grey"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_low_value"
        app:layout_constraintTop_toTopOf="@id/tv_open_value"
        tools:text="收 8408" />

    <!--幅、量、时间-->
    <TextView
        android:id="@+id/tv_change_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/k_chart_change"
        android:textColor="@color/kline_text_color_grey"
        android:textSize="11dp"
        android:layout_marginTop="3.6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_open_value"
        app:layout_constraintStart_toStartOf="@+id/tv_open_value"
        app:layout_constraintHorizontal_bias="0.5"
        tools:text="幅 8408" />

    <TextView
        android:id="@+id/tv_volume_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/k_chart_vol"
        android:textColor="@color/kline_text_color_grey"
        android:textSize="11dp"
        app:layout_constraintTop_toTopOf="@id/tv_change_value"
        app:layout_constraintStart_toStartOf="@+id/tv_high_value"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="量 8408" />

    <TextView
        android:id="@+id/tv_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/k_chart_vol"
        android:textColor="@color/kline_text_color_white"
        android:textSize="11dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/tv_change_value"
        app:layout_constraintStart_toEndOf="@+id/tv_volume_value"
        tools:text="2019-11-24 11:11" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tv_open_value,tv_high_value,tv_low_value,tv_close_value,tv_change_value,tv_volume_value,tv_time_value,view_container"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1px"
        app:layout_goneMarginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_container"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>