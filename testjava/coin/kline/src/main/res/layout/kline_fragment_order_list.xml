<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bids"
            android:textSize="11dp"
            android:textColor="#455c78" />

        <TextView
            android:id="@+id/tv_quantity_bids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trade_vol"
            android:textSize="11dp"
            android:layout_marginStart="37dp"
            android:textColor="#455c78" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trade_price"
            android:textSize="11dp"
            android:layout_centerHorizontal="true"
            android:textColor="#455c78" />


        <TextView
            android:id="@+id/tv_quantity_asks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trade_vol"
            android:textSize="11dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="37dp"
            android:textColor="#455c78" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/asks"
            android:textSize="11dp"
            android:layout_alignParentEnd="true"
            android:textColor="#455c78" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_bids"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:dividerHeight="0dp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_asks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:dividerHeight="0dp" />
    </LinearLayout>

</LinearLayout>
