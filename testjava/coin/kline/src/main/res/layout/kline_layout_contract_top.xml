<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:gravity="center_vertical"
        android:text="--"
        android:textColor="@color/res_red"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/iv_rise_type"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/tv1"
        android:src="@drawable/res_red_down"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_below="@+id/tv1"
        android:layout_alignStart="@+id/tv1"
        android:layout_marginTop="10dp"
        android:text="--"
        android:textColor="@color/res_red"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_below="@+id/tv1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv3"
        android:text="--"
        android:textColor="@color/res_red"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="wrap_content"
        android:layout_height="16.4dp"
        android:layout_below="@+id/tv4"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/v24"
        android:textColor="#6d87a8"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_4_value"
        tools:ignore="RtlHardcoded"
        android:layout_width="wrap_content"
        android:layout_height="16.4dp"
        android:layout_below="@+id/tv4"
        android:layout_gravity="right"
        android:layout_marginStart="7.8dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tv_4"
        android:text="--"
        android:textColor="@color/res_textColor_2"
        android:textSize="12dp" />

    <LinearLayout
        android:id="@+id/rl_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/tv_value_rl"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_8"
            android:layout_width="wrap_content"
            android:layout_height="16.4dp"
            android:text="@string/mark_price"
            android:textColor="#6d87a8"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_9"
            android:layout_width="wrap_content"
            android:layout_height="16.4dp"
            android:layout_marginTop="4dp"
            android:text="@string/f8_kline"
            android:textColor="#6d87a8"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_6"
            android:layout_width="wrap_content"
            android:layout_height="16.4dp"
            android:layout_marginTop="4dp"
            android:text="@string/future_high_price"
            android:textColor="#6d87a8"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_7"
            android:layout_width="wrap_content"
            android:layout_height="16.4dp"
            android:layout_marginTop="4dp"
            android:text="@string/future_low_price"
            android:textColor="#6d87a8"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_value_rl"
        tools:ignore="RtlHardcoded"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_8_value"
            android:layout_width="wrap_content"
            android:layout_height="16.4dp"
            android:text="--"
            android:textColor="@color/res_textColor_2"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_9_value"
            android:layout_width="wrap_content"
            android:layout_height="16.4dp"
            android:layout_marginTop="4dp"
            android:text="--"
            android:textColor="@color/res_textColor_2"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_6_value"
            android:layout_width="wrap_content"
            android:layout_height="16.4dp"
            android:layout_marginTop="4dp"
            android:text="--"
            android:textColor="@color/res_textColor_2"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/tv_7_value"
            android:layout_width="wrap_content"
            android:layout_height="16.4dp"
            android:layout_marginTop="4dp"
            android:text="--"
            android:textColor="@color/res_textColor_2"
            android:textSize="12dp" />

    </LinearLayout>
</RelativeLayout>
