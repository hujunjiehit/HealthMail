<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_value"
    android:layout_width="match_parent"
    android:layout_height="21dp"
    android:background="#991f2238"
    android:gravity="center_vertical"
    android:visibility="gone">

    <TextView
        android:id="@+id/tv_open"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3.6dp"
        android:text="@string/k_chart_open"
        android:textColor="@color/res_textColor_2"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/tv_open_value"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3.6dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/res_textColor_2"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/tv_high"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="3.6dp"
        android:text="@string/k_chart_high"
        android:textColor="@color/res_textColor_2"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/tv_high_value"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3.6dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/res_textColor_2"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/tv_low"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="3.6dp"
        android:text="@string/k_chart_low"
        android:textColor="@color/res_textColor_2"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/tv_low_value"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3.6dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/res_textColor_2"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/tv_close"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="3.6dp"
        android:text="@string/k_chart_close"
        android:textColor="@color/res_textColor_2"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/tv_close_value"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3.6dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/res_textColor_2"
        android:textSize="11dp" />
</LinearLayout>