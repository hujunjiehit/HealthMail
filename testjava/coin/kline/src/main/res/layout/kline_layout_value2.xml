<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_value2"
    android:layout_width="match_parent"
    android:layout_height="21dp"
    android:layout_below="@+id/layout_value"
    android:background="#991f2238"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:visibility="gone">

    <TextView
        android:id="@+id/tv_change"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3.6dp"
        android:text="@string/k_chart_change"
        android:textColor="@color/res_textColor_2"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/tv_change_value"
        android:layout_width="55dp"
        android:layout_height="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="3.6dp"
        android:textColor="@color/res_textColor_2"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/tv_volume"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3.6dp"
        android:text="@string/k_chart_vol"
        android:textColor="@color/res_textColor_2"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/tv_volume_value"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3.6dp"
        android:textColor="@color/res_textColor_2"
        android:textSize="11dp" />


    <TextView
        android:id="@+id/tv_time_value"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="3.6dp"
        android:textColor="@color/res_textColor_2"
        android:textSize="11dp" />
</LinearLayout>