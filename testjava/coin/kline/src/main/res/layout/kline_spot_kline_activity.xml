<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/kline_black_131e2f"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/top_view"
        layout="@layout/kline_title_layout"></include>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/top_view">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/kline_black_131e2f"
            android:orientation="vertical"
            android:theme="@style/ThemeOverlay.AppCompat.Light">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_share_area"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll">

                <com.coinbene.manbiwang.kline.spotkline.view.TopView
                    android:id="@+id/top_view_portrait"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/kline_black_131e2f"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.coinbene.manbiwang.kline.spotkline.view.TimeAndZhibiaoView
                    android:id="@+id/time_and_zhibiao_view"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/kline_black_131e2f"
                    app:layout_constraintTop_toBottomOf="@id/top_view_portrait"/>

                <com.coinbene.manbiwang.kline.spotkline.view.ChartView
                    android:id="@+id/chart_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:isLandscape="false"
                    android:background="@color/kline_black_0f1826"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/time_and_zhibiao_view"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.qmuiteam.qmui.widget.QMUITabSegment
                android:id="@+id/tab_segment"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/kline_black_131e2f"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/kline_black_131e2f"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/buy_layout"
            android:layout_width="128dp"
            android:layout_height="44dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="7.5dp"
            android:gravity="center"
            android:text="@string/k_chart_buy_label"
            android:textColor="@color/res_white"
            android:background="@drawable/btn_green_bg"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/sell_layout"
            android:layout_width="128dp"
            android:layout_height="44dp"
            android:layout_marginStart="7.5dp"
            android:gravity="center"
            android:text="@string/k_chart_sell_label"
            android:textColor="@color/res_white"
            android:background="@drawable/btn_red_bg"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/ll_add_self"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/menu_right_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_self" />

            <TextView
                android:id="@+id/tv_favorites_stutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:textColor="@color/res_textColor_3"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>