<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#131E2F"
    android:layout_height="44dp">


    <View
        android:id="@+id/back_view"
        android:layout_width="44dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/res_icon_back"
        app:layout_constraintStart_toStartOf="@id/back_view"
        app:layout_constraintTop_toTopOf="@id/back_view"
        app:layout_constraintBottom_toBottomOf="@id/back_view"
        app:layout_constraintEnd_toEndOf="@id/back_view">
    </ImageView>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#d2d5e9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="BTC/USDT" />

    <ImageView
        android:id="@+id/iv_down_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="7dp"
        android:background="@drawable/kline_select_down_icon"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toEndOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />


    <View
        android:id="@+id/center_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="@+id/iv_down_icon"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />

    <ImageView
        android:id="@+id/iv_change_orien"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:background="@drawable/kline_change_orien_icon"
        android:layout_marginEnd="13dp"
        app:layout_constraintEnd_toStartOf="@id/iv_contract_guide"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/iv_contract_guide"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:background="@drawable/kline_contract_guide"
        android:layout_marginEnd="13dp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/iv_share"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/kline_share_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>