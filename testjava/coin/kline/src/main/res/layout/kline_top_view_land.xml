<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#191b2a"
    android:layout_height="50dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/price_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false">

        <TextView
            android:id="@+id/trade_pair_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text=""
            android:textColor="@color/color_kline_text1"
            android:textSize="18dp"
            tools:text="BTC/USDT"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/current_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text=""
            android:textColor="@color/res_green"
            android:textSize="24dp"
            tools:text="8888"
            app:layout_constraintStart_toEndOf="@id/trade_pair_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/iv_rise_type"
            android:layout_width="25dp"
            android:layout_height="28dp"
            android:src="@drawable/res_red_up"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/current_price_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/percent_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text=""
            android:textColor="@color/res_green"
            android:textSize="15dp"
            tools:text="+8.88%"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_rise_type"/>

        <TextView
            android:id="@+id/current_price_local_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16dp"
            tools:text="â‰ˆ$7000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/percent_tv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/top_press_layout_value"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_open"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3.6dp"
            android:text="@string/k_chart_open"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_open_value"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3.6dp"
            android:layout_marginEnd="10dp"
            android:minWidth="60dp"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_high"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="3.6dp"
            android:text="@string/k_chart_high"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_high_value"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3.6dp"
            android:layout_marginEnd="10dp"
            android:minWidth="60dp"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_low"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="3.6dp"
            android:text="@string/k_chart_low"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_low_value"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3.6dp"
            android:layout_marginEnd="10dp"
            android:minWidth="60dp"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="3.6dp"
            android:text="@string/k_chart_close"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_close_value"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3.6dp"
            android:layout_marginEnd="10dp"
            android:minWidth="60dp"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_change"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="3.6dp"
            android:text="@string/k_chart_change"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_change_value"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3.6dp"
            android:layout_marginEnd="10dp"
            android:minWidth="60dp"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_volume"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="3.6dp"
            android:text="@string/k_chart_vol"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_volume_value"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3.6dp"
            android:layout_marginEnd="10dp"
            android:minWidth="60dp"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />


        <TextView
            android:id="@+id/tv_time_value"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3.6dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/res_textColor_2"
            android:textSize="11dp" />
    </LinearLayout>
</RelativeLayout>