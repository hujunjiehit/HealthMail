<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#131e2f"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/one_min_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/k_chart_1min"
            android:textColor="@color/res_selector_kline_text_select_blue"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/five_min_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/k_chart_5min"
            android:textColor="@color/res_selector_kline_text_select_blue"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/thirty_min_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/k_chart_30min"
            android:textColor="@color/res_selector_kline_text_select_blue"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/one_week_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/k_chart_1week"
            android:textColor="@color/res_selector_kline_text_select_blue"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/one_month_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/k_chart_1mon"
            android:textColor="@color/res_selector_kline_text_select_blue"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/blank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center" />

    </LinearLayout>
</LinearLayout>