<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/layout_option_footer"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_null"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/res_icon_self_null"
        android:visibility="visible" />

    <TextView
        android:id="@+id/add_self_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_add_self"
        android:gravity="center"
        android:paddingBottom="9dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="9dp"
        android:text="@string/add_favorites"
        android:textColor="@color/res_blue"
        android:textSize="15dp" />
</LinearLayout>