<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/res_background"
    android:orientation="vertical">

    <include
        android:id="@+id/menu_layout"
        layout="@layout/commom_menu_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_coin_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_coin_icon"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/tv_coin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_coin_icon"
                android:text="--"
                android:textColor="@color/res_textColor_1"
                android:textSize="21dp" />

            <TextView
                android:id="@+id/tv_coin_local_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_coin_icon"
                android:text="--"
                android:textColor="@color/res_textColor_2"
                android:textSize="13dp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_coin_info"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:text="@string/record_detail_num"
            android:textColor="@color/res_textColor_2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_num_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_coin_info"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp"
            android:text="--"
            android:textColor="@color/res_textColor_1"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_num"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/record_detail_status"
            android:textColor="@color/res_textColor_2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_status_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_num_value"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="--"
            android:textColor="@color/res_textColor_1"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_status"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/record_address_status"
            android:textColor="@color/res_textColor_2"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/tv_address_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:layout_below="@+id/tv_status_value"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:gravity="right"
            android:text="--"
            android:textColor="@color/res_textColor_1"
            android:textIsSelectable="true"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_txid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address_value"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/record_detail_txid"
            android:textColor="@color/res_textColor_2"
            android:textSize="15dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_txid_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address_value"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:gravity="right"
            android:text="--"
            android:textColor="@color/res_textColor_1"
            android:textIsSelectable="true"
            android:textSize="15dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_txid"
            android:layout_alignBottom="@+id/tv_remark_value"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:text="@string/record_detail_remark"
            android:textColor="@color/res_textColor_2"
            android:textSize="15dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_remark_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_txid_value"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            android:gravity="right"
            android:maxWidth="240dp"
            android:maxLines="2"
            android:text="--"
            android:textColor="@color/res_textColor_1"
            android:textSize="15dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_remark"
            android:layout_alignBottom="@+id/tv_time_value"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:text="@string/record_detail_time"
            android:textColor="@color/res_textColor_2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_remark_value"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="--"
            android:textColor="@color/res_textColor_1"
            android:textSize="15dp" />

    </RelativeLayout>

</LinearLayout>