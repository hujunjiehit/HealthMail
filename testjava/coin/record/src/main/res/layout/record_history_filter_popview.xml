<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/res_background"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/hist_filter_tradepair"
            android:textColor="@color/res_textColor_1"
            android:textSize="14dp" />

        <LinearLayout
            android:id="@+id/ll_spot_fiter"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/baseAsset_edit"
                style="@style/CoinBene.EditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/hist_filter_baseasset"
                android:imeOptions="actionDone"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:text="/"
                android:textColor="@color/res_textColor_1"
                android:textSize="14dp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/quote_asset_edit"
                    style="@style/CoinBene.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:editable="false"
                    android:imeOptions="actionDone"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text="@string/history_filter_all_label"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="14dp" />

                <RelativeLayout
                    android:id="@+id/img_layout"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/coin_type_img"
                        android:layout_width="13dp"
                        android:layout_height="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/history_filter_coin_state" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>


        <RadioGroup
            android:id="@+id/rg_trade_pair_list"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_trade_pair"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_blue_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/history_filter_all_label"
                android:textColor="@color/res_selector_text_color"
                android:textSize="14dp" />
        </RadioGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tradepair_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/order_type"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_order_type"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_ordertype"
                style="@style/CoinBene.EditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:editable="false"
                android:imeOptions="actionDone"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="@string/history_filter_all_label"
                android:textColor="@color/res_textColor_1"
                android:textSize="14dp" />

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/history_filter_coin_state" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/histr_filter_direction"
            android:textColor="@color/res_textColor_1"
            android:textSize="14dp" />


        <RadioGroup
            android:id="@+id/type_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/all_btn"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_blue_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/history_filter_all_label"
                android:textColor="@color/res_selector_text_color"
                android:textSize="14dp" />


            <RadioButton
                android:id="@+id/buy_btn"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/btn_blue_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/histr_filter_direction_buy"
                android:textColor="@color/res_selector_text_color"
                android:textSize="14dp" />

            <RadioButton
                android:id="@+id/sell_btn"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/btn_blue_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/histr_filter_direction_sell"
                android:textColor="@color/res_selector_text_color"
                android:textSize="14dp" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/hist_filter_time"
            android:textColor="@color/res_textColor_1"
            android:textSize="14dp" />

        <RadioGroup
            android:id="@+id/time_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/all_time_btn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_selector"
                android:button="@null"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/history_filter_all_label"
                android:textColor="@color/res_selector_text_color"
                android:textSize="13dp" />

            <RadioButton
                android:id="@+id/three_month_btn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_selector"
                android:button="@null"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/hist_filter_time_3_month"
                android:textColor="@color/res_selector_text_color"
                android:textSize="13dp" />

            <RadioButton
                android:id="@+id/one_month_btn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_selector"
                android:button="@null"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/hist_filter_time_1_month"
                android:textColor="@color/res_selector_text_color"
                android:textSize="13dp" />

            <RadioButton
                android:id="@+id/one_week_btn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_selector"
                android:button="@null"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/hist_filter_time_1_week"
                android:textColor="@color/res_selector_text_color"
                android:textSize="13dp" />

            <RadioButton
                android:id="@+id/one_day_btn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_selector"
                android:button="@null"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/hist_filter_time_1_day"
                android:textColor="@color/res_selector_text_color"
                android:textSize="13dp" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/ll_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <ToggleButton
                android:id="@+id/tb_hide_other_coin"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/hide_checked_bg"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn="" />

            <TextView
                android:id="@+id/hide_cancel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/hist_filter_hide_label"
                android:textColor="@color/res_textColor_2"
                android:textSize="13dp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@color/res_background"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/reset_btn"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="7.5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue_default_shape"
            android:gravity="center"
            android:text="@string/hist_filter_reset_btn"
            android:textAllCaps="false"
            android:textColor="@color/res_textColor_2"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/ok_btn"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="7.5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue_shape"
            android:gravity="center"
            android:text="@string/btn_confirm"
            android:textAllCaps="false"
            android:textColor="@color/res_white"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bg_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="horizontal" />

</LinearLayout>