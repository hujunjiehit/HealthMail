<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@drawable/bg_green_card">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/res_white"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:text="@string/addUp_mining"/>

        <TextView
            android:id="@+id/tv_mining_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/res_white"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:text="-- CFT"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/res_divider_tile"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/res_textColor_2"
                android:textSize="13dp"
                android:text="@string/res_mining_day_amount"/>

            <TextView
                android:id="@+id/tv_mining_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/res_textColor_1"
                android:textSize="13dp"
                android:text="--"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/res_textColor_2"
                android:textSize="13dp"
                android:text="@string/res_order_mining"/>
            <TextView
                android:id="@+id/tv_mining_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/res_textColor_1"
                android:textSize="13dp"
                android:text="--"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/res_textColor_2"
                android:textSize="13dp"
                android:text="@string/res_sort_mining"/>

            <TextView
                android:id="@+id/tv_mining_sort"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/res_textColor_1"
                android:textSize="13dp"
                android:text="--"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_mining_summary"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/res_textColor_1"
        android:textSize="13dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_mining_records">
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/res_divider_tile">
        </View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/res_textColor_1"
            android:textSize="20dp"
            android:text="@string/res_mining_record"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="10dp"
            android:background="@color/res_item_divider">
        </View>
    </LinearLayout>
</LinearLayout>