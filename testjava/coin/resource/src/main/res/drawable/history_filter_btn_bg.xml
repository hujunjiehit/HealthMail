<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="@color/res_blue" />
            <solid android:color="@color/res_blue" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="@color/res_border_color" />
            <solid android:color="@color/res_background" />
        </shape>
    </item>
</selector>