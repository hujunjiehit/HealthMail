<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="325dp"
    android:layout_height="386dp"
    android:background="@drawable/dialog_background"
    tools:ignore="RtlCompat">

    <TextView
        android:id="@+id/tv_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/res_textColor_1"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="官方微信群" />


    <TextView
        android:id="@+id/tv_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/res_textColor_1"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Title"
        tools:text="扫码加官方客服，邀您进群" />

    <ImageView
        android:id="@+id/img_QR"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Description"
        app:layout_goneMarginTop="46dp" />

    <TextView
        android:id="@+id/tv_ContactUs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:gravity="center_vertical"
        android:textColor="@color/res_textColor_2"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/img_Copy"
        app:layout_constraintStart_toStartOf="@+id/img_QR"
        app:layout_constraintTop_toBottomOf="@+id/img_QR"
        tools:text="微信号：CoinBene6666" />

    <ImageView
        android:id="@+id/img_Copy"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:background="@drawable/icon_copy"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ContactUs"
        app:layout_constraintEnd_toEndOf="@+id/img_QR"
        app:layout_constraintTop_toTopOf="@+id/tv_ContactUs" />

    <ImageView
        android:id="@+id/img_Dismiss"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/icon_close_new"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="2px"
        android:layout_marginTop="20dp"
        android:background="@color/res_item_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ContactUs" />

    <TextView
        android:id="@+id/tv_Save"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/options_sava_share"
        android:textColor="@color/res_blue"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

</androidx.constraintlayout.widget.ConstraintLayout>