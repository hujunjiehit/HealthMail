<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/res_background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/commom_menu_layout" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history_type"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <RelativeLayout
                    android:id="@+id/ad_select_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/ad_insert_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="16dp" />


                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/res_down_arrow_big" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/res_item_divider" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history_coin_type"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <RelativeLayout
                    android:id="@+id/ad_select_asset_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/ad_asset_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="16dp" />


                    <ImageView
                        android:id="@+id/arrow_asset_img"
                        android:layout_width="9dp"
                        android:layout_height="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/res_down_arrow_big" />


                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/res_item_divider" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ad_legal_tender_label"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <RelativeLayout
                    android:id="@+id/ad_legal_tender_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/ad_legal_tender_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="16dp" />


                    <ImageView
                        android:id="@+id/arrow_legal_tender_img"
                        android:layout_width="9dp"
                        android:layout_height="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/res_down_arrow_big" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/res_item_divider" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pricing_method"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <RelativeLayout
                    android:id="@+id/rl_price_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/tv_price_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fixed_amount"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="16dp" />


                    <ImageView
                        android:id="@+id/iv_price_method"
                        android:layout_width="9dp"
                        android:layout_height="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/res_down_arrow_big" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/res_item_divider" />

                <TextView
                    android:id="@+id/tv_price_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/fixed_amount"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />


                <RelativeLayout
                    android:id="@+id/rl_price_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/et_price_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/please_input_coin_price_tip"
                        android:inputType="numberSigned|numberDecimal"
                        android:maxLines="1"
                        android:textColor="@color/res_textColor_1"
                        android:textColorHint="@color/res_textColor_3"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_price_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="16dp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/res_item_divider" />

                <TextView
                    android:id="@+id/tv_price_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/price_range_tips"
                    android:textColor="@color/res_red"
                    android:textSize="11dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_market_reference_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/market_reference_price"
                    android:textColor="@color/res_textColor_2"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/tv_price_type_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/price_type_tips"
                    android:textColor="@color/res_textColor_2"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/tv_trade_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/trade_price"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <RelativeLayout
                    android:id="@+id/rl_trade_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/et_trade_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:focusable="false"
                        android:inputType="number|numberDecimal"
                        android:maxLines="1"
                        android:textColor="@color/res_textColor_1"
                        android:textColorHint="@color/res_textColor_3"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_trade_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="16dp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/res_item_divider" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vol"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/ad_input_vol"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:inputType="number|numberDecimal"
                        android:maxLines="1"
                        android:textColor="@color/res_textColor_1"
                        android:textColorHint="@color/res_textColor_3"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/ad_vol_unit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:text="--"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="16dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/res_item_divider" />


                <RelativeLayout
                    android:id="@+id/ad_able_balance_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/ad_able_balance_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ad_able_price"
                        android:textColor="@color/res_textColor_3"
                        android:textSize="13dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/ad_able_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ad_able_balance_tips"
                        android:text="--"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="13dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/ad_recharge"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text="@string/recharge"
                        android:textColor="@color/res_blue"
                        android:textSize="13dp"
                        android:visibility="visible" />


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/order_unit_price"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/ad_input_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/please_input_coin_price_tip"
                    android:inputType="number|numberDecimal"
                    android:maxLines="1"
                    android:textColor="@color/res_textColor_1"
                    android:textColorHint="@color/res_textColor_3"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/res_item_divider"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/limit"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:paddingRight="15dp">

                    <EditText
                        android:id="@+id/ad_limit_min"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/ad_input_limit"
                        android:imeOptions="actionDone"
                        android:inputType="number|numberDecimal"
                        android:maxLines="1"
                        android:textColor="@color/res_textColor_1"
                        android:textColorHint="@color/res_textColor_3"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/left_amount_unit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="5dp"
                        android:text="--"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:text="-"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="16dp" />


                    <EditText
                        android:id="@+id/ad_limit_max"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/ad_input_limit"
                        android:imeOptions="actionDone"
                        android:inputType="number|numberDecimal"
                        android:maxLines="1"
                        android:textColor="@color/res_textColor_1"
                        android:textColorHint="@color/res_textColor_3"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/right_amount_unit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="--"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="16dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/res_item_divider" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/payment_tip_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ad_payment_label"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <com.coinbene.common.widget.app.FixedRecyclerView
                    android:id="@+id/bind_info_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/record_detail_remark"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/ad_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/ad_input_remark"
                    android:imeOptions="actionDone"
                    android:maxLength="500"
                    android:textColor="@color/res_textColor_1"
                    android:textColorHint="@color/res_textColor_3"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/res_item_divider" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/checkbox_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/checkBox_imgview"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/asset_check_state" />

                <TextView
                    android:id="@+id/hide_asset_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ad_reference_num"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">


                <Button
                    android:id="@+id/ad_release_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_sharp"
                    android:text="@string/save_and_release"
                    android:textColor="@color/res_white"
                    android:textSize="18dp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

