<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/res_divider_tile"
    android:orientation="vertical">

    <include
        android:id="@+id/menu_layout"
        layout="@layout/commom_menu_layout" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_layout">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/otc_order_detail_item"
                    android:paddingLeft="15dp"
                    android:paddingTop="17dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/tv_order_direction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/res_red"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/tv_order_asset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_order_direction"
                        android:text="-"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/tv_remaining_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/tv_order_status"
                        android:background="@color/res_item_divider"
                        android:paddingLeft="8dp"
                        android:paddingTop="2dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="2dp"
                        android:text=""
                        android:textColor="@color/res_blue"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="15dp"
                        android:text="-"
                        android:textColor="@color/res_assistColor_21"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_order_all_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_order_direction"
                        android:layout_marginTop="14dp"
                        android:text="@string/totle_price"
                        android:textColor="@color/res_textColor_3"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_order_direction"
                        android:layout_marginTop="14dp"
                        android:layout_toRightOf="@+id/tv_order_all_price"
                        android:text="/"
                        android:textColor="@color/res_textColor_3"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_order_direction"
                        android:layout_marginTop="14dp"
                        android:layout_toRightOf="@+id/tv_right"
                        android:textColor="@color/res_textColor_3"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_order_all_price_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_order_direction"
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/ll_display_hide"
                        android:gravity="right"
                        android:text="-"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/ll_display_hide"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_below="@+id/tv_order_direction"
                        android:layout_alignParentRight="true"
                        android:gravity="center|bottom"
                        android:paddingRight="15dp">

                        <ImageView
                            android:id="@+id/iv_all_price_copy"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/icon_copy" />

                        <LinearLayout
                            android:id="@+id/ll_display"
                            android:layout_width="17dp"
                            android:layout_height="32dp"
                            android:gravity="center|bottom">

                            <ImageView
                                android:id="@+id/iv_display_hide"
                                android:layout_width="9dp"
                                android:layout_height="5dp"
                                android:layout_marginBottom="5dp"
                                android:src="@drawable/icon_bottom_arrow" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_order_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_order_all_price"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="15dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_order_unit_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_unit_price"
                            android:textColor="@color/res_textColor_3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_right1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_order_unit_price"
                            android:text="/"
                            android:textColor="@color/res_textColor_3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_currency1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_right1"
                            android:textColor="@color/res_textColor_3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_order_unit_price_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="-"
                            android:textColor="@color/res_textColor_1"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_order_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_order_unit_price"
                            android:layout_marginTop="12dp"
                            android:text="@string/order_number"
                            android:textColor="@color/res_textColor_3"
                            android:textSize="14dp" />


                        <TextView
                            android:id="@+id/tv_order_num_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_order_unit_price"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="12dp"
                            android:text="-"
                            android:textColor="@color/res_textColor_1"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_order_num"
                            android:layout_marginTop="12dp"
                            android:text="@string/history_fee_label"
                            android:textColor="@color/res_textColor_3"
                            android:textSize="14dp" />


                        <TextView
                            android:id="@+id/tv_fee_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_order_num"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="12dp"
                            android:text="-"
                            android:textColor="@color/res_textColor_1"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_real_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_fee"
                            android:layout_marginTop="12dp"
                            android:text="@string/real_account"
                            android:textColor="@color/res_textColor_3"
                            android:textSize="14dp" />


                        <TextView
                            android:id="@+id/tv_real_account_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_fee"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="12dp"
                            android:text="-"
                            android:textColor="@color/res_textColor_1"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_create_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_real_account"
                            android:layout_marginTop="12dp"
                            android:text="@string/create_time"
                            android:textColor="@color/res_textColor_3"
                            android:textSize="14dp" />


                        <TextView
                            android:id="@+id/tv_create_time_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_real_account"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="12dp"
                            android:text="-"
                            android:textColor="@color/res_textColor_1"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_order_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_create_time"
                            android:layout_marginTop="12dp"
                            android:text="@string/order_id"
                            android:textColor="@color/res_textColor_3"
                            android:textSize="14dp" />


                        <TextView
                            android:id="@+id/tv_order_id_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_create_time"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/iv_order_id_copy"
                            android:text="-"
                            android:textColor="@color/res_textColor_1"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/iv_order_id_copy"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_below="@+id/tv_create_time"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/icon_copy" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/rl_buy_bank_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/otc_order_detail_item"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/tv_buy_pay_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/bank_pay"
                        android:textColor="@color/res_textColor_3"
                        android:textSize="13dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_bank_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bank_user_name"
                            android:textColor="@color/res_textColor_3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_bank_user_name_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="@color/res_textColor_1"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/iv_name_copy"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/icon_copy" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_sell_bank_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bank_name"
                            android:textColor="@color/res_textColor_3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_bank_name_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/iv_bank_name"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"
                            android:textColor="@color/res_textColor_1"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/iv_bank_name"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/icon_copy" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_bank_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_bank_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bank_address"
                            android:textColor="@color/res_textColor_3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_bank_address_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="4"
                            android:text="-"
                            android:textColor="@color/res_textColor_1"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/iv_bank_address"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/icon_copy" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_bank_have"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_bank_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bank_acount"
                            android:textColor="@color/res_textColor_3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_bank_code_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-"
                            android:textColor="@color/res_textColor_1"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/iv_bank_code"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/icon_copy" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_pay_mark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_pay_mark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pay_remark"
                            android:textColor="@color/res_textColor_3"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_pay_mark_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="4"
                            android:text="-"
                            android:textColor="@color/res_textColor_1"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/iv_bank_mark"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/icon_copy" />
                    </LinearLayout>
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rl_shops_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/otc_order_detail_item"
                    android:paddingLeft="15dp"
                    android:paddingTop="17dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_instructions_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/instructions_for_transfer"
                        android:textColor="@color/res_textColor_3"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_instructions_tip1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_instructions_title"
                        android:layout_marginTop="12dp"
                        android:text="@string/instruction_for_transfor_tip1"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_instructions_tip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_instructions_tip1"
                        android:layout_marginTop="2dp"
                        android:text="@string/instruction_for_transfor_tip2"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_shops_remarks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_instructions_tip2"
                        android:layout_marginTop="12dp"
                        android:text="@string/shops_remarks"
                        android:textColor="@color/res_textColor_3"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_shops_remarks_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_shops_remarks"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="13dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_sell_pay_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/otc_order_detail_item"
                    android:paddingLeft="15dp"
                    android:paddingTop="17dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/tv_sell_pay_info_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_receipt_info"
                        android:textColor="@color/res_textColor_3"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_pay_info_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_sell_pay_info_title"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/res_textColor_3"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_pay_info_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_sell_pay_info_title"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="14dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_others_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/otc_order_detail_item"
                    android:paddingLeft="15dp"
                    android:paddingTop="17dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/tv_others_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/others_info"
                        android:textColor="@color/res_textColor_3"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_others_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_others_title"
                        android:layout_marginTop="12dp"
                        android:text="@string/bank_user_name"
                        android:textColor="@color/res_textColor_3"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_others_name_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_others_name"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_others_register_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_others_title"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:text="@string/register_time"
                        android:textColor="@color/res_textColor_3"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_others_register_time_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_others_name"
                        android:layout_alignStart="@+id/tv_others_register_time"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_others_complete_orders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_others_title"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="12dp"
                        android:text="@string/complete_orders"
                        android:textColor="@color/res_textColor_3"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_others_complete_orders_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_others_name"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="14dp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="144dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/rl_hander_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/res_background"
        android:orientation="vertical"
        android:padding="15dp">


        <com.coinbene.common.widget.app.JustifyTextView
            android:id="@+id/tv_order_status_bottom_dis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/otc_order_status_tip"
            android:textColor="@color/res_assistColor_22"
            android:textSize="13dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_cancel"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_default_shape"
                android:gravity="center"
                android:text="@string/otc_order_cancel"
                android:textColor="@color/res_blue"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_order_status_click"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_sharp"
                android:gravity="center"

                android:text="@string/completed_transfer"
                android:textColor="@color/res_white"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/tv_order_cancel_back"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_sharp"
                android:gravity="center"
                android:text="@string/otc_order_cancel"
                android:textColor="@color/res_blue_btn_selector"
                android:textSize="18dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>