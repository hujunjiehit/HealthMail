<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/res_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="--/--"
                android:textColor="@color/res_textColor_1"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="5dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/res_down_arrow_big" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_chart"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="@drawable/icon_to_kline" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/icon_guide" />

    </RelativeLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/res_background">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:elevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/res_background">

                    <TextView
                        android:id="@+id/tv_lever"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/yellow_bg"
                        android:paddingStart="6dp"
                        android:paddingTop="1dp"
                        android:paddingEnd="6dp"
                        android:paddingBottom="1dp"
                        android:text="5X"
                        android:textColor="@color/res_assistColor_22"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/tv_burst_price_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/tv_burst_price"
                        android:layout_marginTop="10dp"
                        android:text="--"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_burst_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="65dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/burst_price"
                        android:textColor="@color/res_textColor_2"
                        android:textSize="11dp" />


                    <TextView
                        android:id="@+id/tv_risk_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="165dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/risk_rate"
                        android:textColor="@color/res_textColor_2"
                        android:textSize="11dp" />

                    <ImageView
                        android:id="@+id/iv_margin_risk_descrip"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="10.5dp"
                        android:layout_toRightOf="@+id/tv_risk_rate"
                        android:src="@drawable/res_margin_tip" />

                    <TextView
                        android:id="@+id/tv_risk_rate_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/tv_risk_rate"
                        android:layout_marginTop="10dp"
                        android:text="--"
                        android:textColor="@color/res_textColor_1"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/tv_borrow_return_asset"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:gravity="center"
                        android:text="@string/borrow_return_asset"
                        android:textColor="@color/res_blue"
                        android:textSize="14dp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/res_divider_tile" />

                <include
                    android:id="@+id/header_layout"
                    layout="@layout/spot_trade_header" />

                <View
                    android:id="@+id/line_view"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/res_divider_tile" />
            </LinearLayout>

            <com.qmuiteam.qmui.widget.QMUITabSegment
                android:id="@+id/tab_segment"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/res_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/res_item_divider" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>
