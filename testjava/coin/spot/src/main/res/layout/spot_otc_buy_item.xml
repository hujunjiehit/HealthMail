<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp">


        <TextView
            android:id="@+id/item_merchant_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/shape_merchant_bg"
            android:gravity="center"
            android:textColor="@color/res_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/item_merchant_icon"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/res_textColor_1"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="10.4dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/tv_name"
            android:src="@drawable/icon_auth_tip" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="15dp"
            android:text="@string/order_number"
            android:textColor="@color/res_textColor_2"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_number_balue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/tv_number"
            android:text="--"
            android:textColor="@color/res_textColor_2"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_number"
            android:layout_marginTop="4dp"
            android:text="@string/limit"
            android:textColor="@color/res_textColor_2"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_limit_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_number"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/tv_limit"
            android:text="--"
            android:textColor="@color/res_textColor_2"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_unit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/tv_unit_price_value"
            android:text="@string/order_unit_price"
            android:textColor="@color/res_textColor_2"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_unit_price_value"
            android:layout_width="wrap_content"
            android:layout_height="32.2dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="33.4dp"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/res_textColor_1"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/tv_order_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/view_line"
            android:textColor="@color/res_textColor_2"
            android:textSize="13dp" />

        <View
            android:id="@+id/view_line"
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/tv_order_rate"
            android:background="@color/res_textColor_2" />

        <TextView
            android:id="@+id/tv_order_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/res_textColor_2"
            android:textSize="13dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_buy_or_sell"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:paddingEnd="15dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rl_pay_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp" />

        <ImageView
            android:id="@+id/iv_bank"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_bank"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_alipay"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/iv_bank"
            android:src="@drawable/icon_alipay"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_wechat"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/iv_alipay"
            android:src="@drawable/icon_wechat"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_buy_or_sell"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_gradient_day"
            android:text="@string/trade_buy"
            android:textColor="@color/res_white"
            android:textSize="14dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_submit"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingRight="15dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_usdt"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/input_edit_bg"
            android:hint="@string/please_input_number"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:textColor="@color/res_textColor_1"
            android:textColorHint="@color/res_textColor_3"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_all_usdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/all_acount"
            android:textColor="@color/res_blue"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_all_usdt"
            android:text="@string/market_tab_usdt"
            android:textColor="@color/res_textColor_1"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_cny"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_below="@+id/et_usdt"
            android:layout_marginTop="14dp"
            android:background="@drawable/input_edit_bg"
            android:hint="@string/please_input_buy_cny"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:numeric="decimal"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/res_textColor_1"
            android:textColorHint="@color/res_textColor_3"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_all_cny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_usdt"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22.4dp"
            android:layout_marginRight="10dp"
            android:text="@string/all_acount"
            android:textColor="@color/res_blue"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_usdt"
            android:layout_marginTop="22.4dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_all_cny"
            android:text="@string/cny"
            android:textColor="@color/res_textColor_1"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_cny"
            android:layout_marginTop="19.6dp"
            android:text="@string/order_validity_tip"
            android:textColor="@color/res_textColor_1"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_cny"
            android:layout_marginTop="19.6dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/btn_submit"
            android:text="@string/btn_cancel"
            android:textColor="@color/res_textColor_1"
            android:textSize="13dp" />

        <Button
            android:id="@+id/btn_submit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="70dp"
            android:layout_height="27dp"
            android:layout_below="@+id/et_cny"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_bg_sharp"
            android:text="@string/create_order"
            android:textColor="@color/res_white"
            android:textSize="14dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_marginStart="15dp"
        android:background="@color/res_item_divider" />
</LinearLayout>
