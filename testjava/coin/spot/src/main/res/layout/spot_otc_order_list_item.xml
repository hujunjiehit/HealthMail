<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/res_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_order_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="--"
            android:textColor="@color/res_red"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_order_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_order_direction"
            android:text="--"
            android:textColor="@color/res_textColor_1"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_order_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18.4dp"
            android:layout_toRightOf="@+id/tv_order_asset"
            android:text="--"
            android:textColor="@color/res_textColor_3"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/arrow_img0"
            android:text="--"
            android:textColor="@color/res_assistColor_21"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/arrow_img0"
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/right_arrow" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:background="@color/res_item_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_order_unit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unit_price"
            android:textColor="@color/res_textColor_3"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/tv_order_unit_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_order_unit_price"
            android:text="--"
            android:textColor="@color/res_textColor_1"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:text="@string/order_number"
            android:textColor="@color/res_textColor_3"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/tv_order_num_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_order_num"
            android:layout_below="@+id/tv_order_unit_price"
            android:layout_marginTop="5dp"
            android:text="--"
            android:textColor="@color/res_textColor_1"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_order_all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/totle_price"
            android:textColor="@color/res_textColor_3"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/tv_order_all_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_unit_price"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:text="--"
            android:textColor="@color/res_textColor_1"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_order_status_disc"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_order_all_price_value"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:textColor="@color/res_textColor_3"
            android:textSize="13dp" />


        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_order_all_price_value"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/res_background"
            android:paddingBottom="2dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:text="--"
            android:visibility="gone"
            android:textColor="@color/res_blue"
            android:textSize="13dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/res_divider_tile" />
</LinearLayout>
