<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/res_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ieo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/res_background"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="7dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/icon_tips"
            android:layout_width="15dp"
            android:layout_height="14dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/tips_ieo_icon" />

        <TextView
            android:id="@+id/ieo_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/icon_tips"
            android:text="@string/tips_ieo_title"
            android:textColor="@color/res_assistColor_21"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/ieo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ieo_title_tv"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/res_assistColor_22"
            android:textSize="13dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.coinbene.manbiwang.spot.tradelayout.TradeLayout
            android:id="@+id/new_trade_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.4"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            />

        <com.coinbene.manbiwang.spot.orderlayout.OrderLayout
            android:id="@+id/new_order_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.6"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>


</LinearLayout>
