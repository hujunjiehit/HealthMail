<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/res_background"
    android:orientation="vertical">

    <include
        android:id="@+id/menu_layout"
        layout="@layout/commom_menu_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/authentication_tip"
                android:textColor="@color/res_assistColor_22"
                android:textSize="13dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/user_name"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <com.coinbene.common.widget.EditTextOneIcon
                    android:id="@+id/et_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:text="--"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="16dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:minHeight="71dp">

                <TextView
                    android:id="@+id/tv_head_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/bank_acount_address"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />


                <com.coinbene.common.widget.EditTextOneIcon
                    android:id="@+id/et_head_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_head_bank"
                    android:layout_marginTop="12dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:imeOptions="actionDone"
                    android:textColor="@color/res_textColor_1"
                    android:textColorHint="@color/res_textColor_3"
                    android:textSize="14dp" />
                <!--android:hint="@string/with_draw_address_hint"-->

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/bank_branch"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <com.coinbene.common.widget.EditTextOneIcon
                    android:id="@+id/et_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="@string/cap_pwd_hint"
                    android:inputType="number"
                    android:textColor="@color/res_textColor_1"
                    android:textColorHint="@color/res_textColor_3"
                    android:textSize="16dp" />

            </RelativeLayout>

            <View
                android:id="@+id/msg_code_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:id="@+id/msg_code_layout"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_bank_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/bank_acount"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <com.coinbene.common.widget.EditTextOneIcon
                    android:id="@+id/et_bank_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:hint="@string/please_input_msg_code"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textColor="@color/res_textColor_1"
                    android:textColorHint="@color/res_textColor_3"
                    android:textSize="16dp" />


            </RelativeLayout>

            <View
                android:id="@+id/google_line_view"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:id="@+id/google_layout"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/setting_capital_pwd"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="13dp" />

                <com.coinbene.common.widget.EditTextTwoIcon
                    android:id="@+id/et_pin"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:hint="@string/google_auth_code_hint"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textColor="@color/res_textColor_1"
                    android:textColorHint="@color/res_textColor_3"
                    android:textSize="16dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/res_item_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="60dp"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/submmit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/btn_bg_sharp"
                    android:gravity="center"
                    android:text="@string/btn_ok"
                    android:textColor="@color/res_white"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>