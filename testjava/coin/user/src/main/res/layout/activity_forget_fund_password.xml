<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/res_background">

    <include
        android:id="@+id/include"
        layout="@layout/commom_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/forget_balance_password"
            android:textColor="@color/res_textColor_1"
            android:textSize="25dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/new_balance_password"
            android:textColor="@color/res_textColor_1"
            android:textSize="13dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/forget_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/forget_input_close"
                app:errorEnabled="false"
                app:hintEnabled="false"
                app:passwordToggleDrawable="@drawable/selector_pwd_icon">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@android:color/transparent"
                    android:inputType="numberPassword"
                    android:maxLength="8"
                    android:singleLine="true"
                    android:textColorHint="@color/res_textColor_3"
                    android:textSize="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/forget_input_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_close"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginTop="11.6dp"
            android:background="@color/res_item_divider" />

        <LinearLayout
            android:id="@+id/layout_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/forget_verification_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:text="@string/check_msg_item_label"
                android:textColor="@color/res_textColor_1"
                android:textSize="13dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="22dp">

                <EditText
                    android:id="@+id/fund_verification_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:maxLength="6"
                    android:inputType="number"
                    android:textSize="16dp"
                    android:hint="@string/please_input_msg_code"
                    android:singleLine="true"
                    android:textColor="@color/res_textColor_1"
                    android:textColorHint="@color/res_textColor_3" />

                <View
                    android:id="@+id/forget_vertical_line"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:visibility="visible"
                    android:layout_toLeftOf="@+id/send_verification_code"
                    android:background="@color/res_item_divider" />

                <TextView
                    android:id="@+id/send_verification_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/send_verification_code"
                    android:visibility="visible"
                    android:textColor="@color/res_blue" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_marginTop="11.6dp"
                android:background="@color/res_item_divider" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_google_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:text="@string/check_google_code_label"
            android:textColor="@color/res_textColor_1"
            android:textSize="13dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="22dp">

            <EditText
                android:id="@+id/input_google_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:maxLength="6"
                android:inputType="number"
                android:textSize="16dp"
                android:hint="@string/please_input_google_code"
                android:singleLine="true"
                android:textColor="@color/res_textColor_1"
                android:textColorHint="@color/res_textColor_3" />

        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginTop="11.6dp"
            android:background="@color/res_item_divider" />
    </LinearLayout>


    <Button
        android:id="@+id/forget_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_bg_sharp"
        android:text="@string/btn_confirm"
        android:textColor="@color/res_white" />

</RelativeLayout>