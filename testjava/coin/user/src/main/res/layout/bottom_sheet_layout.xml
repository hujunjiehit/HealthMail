<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_shape"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/share_wechart"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="17.6dp"
            android:drawableTop="@drawable/share_wechart"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal"
            android:text="@string/wechat"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/share_frend"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="17.6dp"
            android:drawableTop="@drawable/share_frend"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal"
            android:text="@string/friends"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/share_facebook"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="17.6dp"
            android:drawableTop="@drawable/share_facebook"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal"
            android:text="FaceBook"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/share_twitter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            android:drawableTop="@drawable/share_twitter"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal"
            android:text="Twitter"
            android:textColor="#ffffff"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="19.6dp"
        android:background="#33ffffff" />

    <TextView
        android:id="@+id/share_cancel_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.6dp"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:text="@string/btn_cancel"
        android:textColor="#eeeeee"
        android:textSize="16sp" />

</LinearLayout>
