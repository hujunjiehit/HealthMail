<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tols="http://schemas.android.com/apk/res-auto"
    android:background="@color/res_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingRight="15dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/header_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/user_icon" />

        <RelativeLayout
            android:id="@+id/userInfo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/header_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/res_textColor_1"
                android:textSize="19dp" />


            <TextView
                android:id="@+id/uid_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_tv"
                android:layout_marginTop="3dp"
                android:textColor="@color/res_textColor_2"
                android:textSize="13dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_copy"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/name_tv"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/uid_tv"
                android:background="@drawable/res_icon_copy" />
        </RelativeLayout>



    </RelativeLayout>

    <View
        android:id="@+id/sub_line_view"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/res_divider_tile" />

    <RelativeLayout
        android:id="@+id/layout_VIP"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/res_selector_item_press_status"
        android:paddingStart="20dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/icon_VIP"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/res_icon_vip" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/icon_VIP"
            android:text="@string/res_rate_level"
            android:textColor="@color/res_textColor_1"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_VIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/img_Vip_Right"
            android:textColor="#b99253"
            android:textSize="16dp"
            tools:text="VIP2" />

        <ImageView
            android:id="@+id/img_Vip_Right"
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/right_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignStart="@+id/tv1"
            android:layout_alignParentBottom="true"
            android:background="@color/res_item_divider" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/invitation_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/res_selector_item_press_status"
        android:paddingStart="20dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/icon_invitation"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_invite_rebate" />

        <TextView
            android:id="@+id/invitation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/icon_invitation"
            android:text="@string/setting_invitation"
            android:textColor="@color/res_textColor_1"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/arrow_img"
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/right_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignStart="@+id/invitation_tv"
            android:layout_alignParentBottom="true"
            android:background="@color/res_item_divider" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/safe_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/res_selector_item_press_status"
        android:paddingStart="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/icon_safe"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/setting_safe_icon" />

        <TextView
            android:id="@+id/safe_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/icon_safe"
            android:text="@string/setting_safe"
            android:textColor="@color/res_textColor_1"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/arrow_img0"
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/right_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignStart="@+id/safe_tv"

            android:layout_alignLeft="@+id/icon_safe"
            android:layout_alignParentBottom="true"
            android:background="@color/res_item_divider" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/balance_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/res_selector_item_press_status"
        android:paddingStart="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/icon_balance"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/setting_balance_icon" />

        <TextView
            android:id="@+id/balance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/icon_balance"
            android:text="@string/setting_balance"
            android:textColor="@color/res_textColor_1"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/arrow_img1"
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/right_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignStart="@+id/balance_tv"

            android:layout_alignParentBottom="true"
            android:background="@color/res_item_divider" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/defined_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/res_selector_item_press_status"
        android:paddingStart="20dp">

        <ImageView
            android:id="@+id/icon_defined"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/setting_setting_icon" />

        <TextView
            android:id="@+id/defined_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/icon_defined"
            android:text="@string/setting_defined"
            android:textColor="@color/res_textColor_1"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/arrow_img2"
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/right_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignStart="@+id/defined_tv"

            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="@color/res_item_divider" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/customer_service_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/res_selector_item_press_status"
        android:paddingStart="20dp">

        <ImageView
            android:id="@+id/icon_customer_service"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/setting_support_icon" />

        <TextView
            android:id="@+id/customer_service_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/icon_customer_service"
            android:text="@string/customer_service"
            android:textColor="@color/res_textColor_1"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/icon_customer_service_img2"
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/right_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignStart="@+id/customer_service_tv"
            android:layout_alignParentBottom="true"
            android:background="@color/res_item_divider" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/res_selector_item_press_status"
        android:paddingStart="20dp">

        <ImageView
            android:id="@+id/icon_about"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/setting_about_icon" />

        <TextView
            android:id="@+id/about_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/icon_about"
            android:text="@string/setting_about"
            android:textColor="@color/res_textColor_1"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/arrow_img3"
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/right_arrow" />


        <TextView
            android:id="@+id/self_version"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/arrow_img3"
            android:background="@drawable/version_shape"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignStart="@+id/about_tv"
            android:layout_alignParentBottom="true"
            android:background="@color/res_item_divider" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/quit_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/left_quit_tv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:background="@drawable/button_blue_bg"
            android:gravity="center"
            android:text="@string/setting_quit"
            android:textColor="@color/res_blue"
            android:textSize="16dp" />

    </RelativeLayout>

</LinearLayout>
