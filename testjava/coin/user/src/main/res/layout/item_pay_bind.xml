<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/res_background">


    <ImageView
        android:id="@+id/iv_pay_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_bank"
        android:text=""
        android:textColor="@color/res_textColor_1"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pay_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text=""
        android:textColor="@color/res_textColor_1"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_pay_img"
        app:layout_constraintStart_toEndOf="@+id/iv_pay_img"
        app:layout_constraintTop_toTopOf="@+id/iv_pay_img" />


    <ToggleButton
        android:id="@+id/tb_bind_status"
        android:layout_width="42dp"
        android:layout_height="25dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/hide_tb_bg"
        android:button="@null"
        android:checked="false"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="@+id/tv_pay_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_pay_name" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/deal_unit"
        android:textColor="@color/res_textColor_1"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/iv_pay_img"
        app:layout_constraintTop_toBottomOf="@+id/iv_pay_img" />

    <TextView
        android:id="@+id/tv_acount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text=""
        android:textColor="@color/res_textColor_1"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />


    <TextView
        android:id="@+id/tv_unbind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="@string/unbind"
        android:textColor="@color/res_blue"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_acount"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/res_item_divider"
        app:layout_constraintTop_toBottomOf="@+id/tv_unbind" />

</androidx.constraintlayout.widget.ConstraintLayout>