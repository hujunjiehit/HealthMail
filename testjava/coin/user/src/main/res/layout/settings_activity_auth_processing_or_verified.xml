<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/res_background"
    android:orientation="vertical">

    <include layout="@layout/commom_menu_layout" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingLeft="15dp">

        <ImageView
            android:id="@+id/iv_auth_state"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_auth_verified" />

        <TextView
            android:id="@+id/tv_auth_stutas_src"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_auth_state"
            android:text="--"
            android:textColor="@color/res_textColor_1"
            android:textSize="17dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_country"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:text="@string/country_or_area"
            android:textColor="@color/res_textColor_1"
            android:textSize="13dp" />


        <TextView
            android:id="@+id/tv_country_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/select_country_tv"
            android:background="@null"
            android:textColor="@color/res_textColor_1"
            android:textSize="17dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="15dp"
        android:background="@color/res_item_divider" />

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:text="@string/user_name"
            android:textColor="@color/res_textColor_1"
            android:textSize="13dp" />


        <TextView
            android:id="@+id/tv_real_name_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/select_country_tv"
            android:background="@null"
            android:textColor="@color/res_textColor_1"
            android:textSize="17dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="15dp"
        android:background="@color/res_item_divider" />


    <RelativeLayout
        android:id="@+id/rl_id_card"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_id_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:text="@string/id_card_number"
            android:textColor="@color/res_textColor_1"
            android:textSize="13dp" />


        <TextView
            android:id="@+id/tv_id_card_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/select_country_tv"
            android:textColor="@color/res_textColor_1"
            android:textSize="17dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="15dp"
        android:background="@color/res_item_divider" />
</LinearLayout>