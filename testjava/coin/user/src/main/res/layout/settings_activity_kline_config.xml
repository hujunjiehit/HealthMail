<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/res_background">

    <include layout="@layout/commom_menu_layout"/>


    <RelativeLayout
        android:id="@+id/lineCofing_greenUp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/market_item_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/greenUp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/green_rise_red_fall"
            android:textColor="@color/res_textColor_1"
            android:textSize="16dp" />



        <ImageView
            android:layout_width="34dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/greenUp_tv"
            android:src="@drawable/kline_config_green_rise"/>



        <ImageView
            android:id="@+id/greenUp_img"
            android:layout_width="13dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/trade_pair_check"
            android:visibility="visible"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:background="@color/res_item_divider" />

    <RelativeLayout
        android:id="@+id/lineCofing_redUp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/market_item_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/redUp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/red_rise_green_fall"
            android:textColor="@color/res_textColor_1"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/redUp_tv"
            android:src="@drawable/kline_config_red_rise"/>


        <ImageView
            android:id="@+id/redUp_img"
            android:layout_width="13dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/trade_pair_check"
            android:visibility="gone"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:background="@color/res_item_divider" />




</LinearLayout>