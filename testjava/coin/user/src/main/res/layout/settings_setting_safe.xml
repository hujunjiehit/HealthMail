<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/res_background"
    android:orientation="vertical">

    <include layout="@layout/commom_menu_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/safe_title"
                android:textColor="@color/res_textColor_1"
                android:textSize="25dp" />

            <RelativeLayout
                android:id="@+id/mail_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/res_selector_item_press_status"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/left_email_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_email"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/email_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="18dp"
                    android:layout_toStartOf="@+id/bind_email_tv"
                    android:text=""
                    android:textColor="@color/res_textColor_3"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/bind_email_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/arrow_img0"
                    android:text="@string/setting_bind"
                    android:textColor="@color/res_textColor_2"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/arrow_img0"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />


            <RelativeLayout
                android:id="@+id/phone_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/res_selector_item_press_status"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/left_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_phone"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/bind_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/reset_phoneNum"
                    android:text="@string/setting_bind"
                    android:textColor="@color/res_textColor_2"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/reset_phoneNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/arrow_img1"
                    android:text="@string/setting_rest"
                    android:textColor="@color/res_blue"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/arrow_img1"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:id="@+id/google_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/res_selector_item_press_status"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/left_google_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_google_auth"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/bind_google_stutas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/bind_google_tv"
                    android:text="@string/setting_bind"
                    android:textColor="@color/res_textColor_2"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/bind_google_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/arrow_img2"
                    android:text="@string/setting_bind"
                    android:textColor="@color/res_textColor_2"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/arrow_img2"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:id="@+id/rl_auth"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/res_selector_item_press_status"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/real_nameauthentication"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="16dp"
                    tools:ignore="RtlHardcoded" />

                <ImageView
                    android:id="@+id/iv_auth_state"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/tv_auth_state"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_auth_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toLeftOf="@+id/iv_right"
                    android:text=""
                    android:textColor="@color/res_textColor_2"
                    android:textSize="14dp" />


                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:id="@+id/auth_line_view"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:id="@+id/save_reset_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/res_selector_item_press_status"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/login_password"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="16dp"
                    tools:ignore="RtlHardcoded" />


                <TextView
                    android:id="@+id/reset_password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/reset_password_right"
                    android:text="@string/reset_password"
                    android:textColor="@color/res_blue"
                    android:textSize="14dp" />


                <ImageView
                    android:id="@+id/reset_password_right"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:id="@+id/gesture_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/res_selector_item_press_status"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/left_gesture_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_gesture_pwd"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="16dp" />

                <ToggleButton
                    android:id="@+id/gesture_tg_btn"
                    android:layout_width="42dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/hide_tb_bg"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>

            <View
                android:id="@+id/finger_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="15dp"
                android:background="@color/res_item_divider"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/fingerprint_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/res_selector_item_press_status"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/finger_gesture_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_finger_pwd"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="16dp" />

                <ToggleButton
                    android:id="@+id/finger_tg_btn"
                    android:layout_width="42dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/hide_tb_bg"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:id="@+id/login_second_checked"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/res_selector_item_press_status"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/login_secondChecked_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/second_checked_content"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="16dp" />

                <ToggleButton
                    android:id="@+id/second_checked_swich"
                    android:layout_width="42dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/hide_tb_bg"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="15dp"
                android:background="@color/res_item_divider" />

            <RelativeLayout
                android:id="@+id/changeType_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/res_selector_item_press_status"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/left_check_selected_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_check_selected"
                    android:textColor="@color/res_textColor_1"
                    android:textSize="16dp"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/check_txt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/arrow_img3"
                    android:textColor="@color/res_textColor_2"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/arrow_img3"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="15dp"
                android:background="@color/res_item_divider" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
